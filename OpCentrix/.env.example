# OpCentrix Database Configuration
# This file provides database configuration options for different environments

# Development Settings (with sample data)
ASPNETCORE_ENVIRONMENT=Development
SEED_SAMPLE_DATA=true
RECREATE_DATABASE=false

# Production Settings (clean start)
# ASPNETCORE_ENVIRONMENT=Production
# SEED_SAMPLE_DATA=false
# RECREATE_DATABASE=false

# Database Settings
DATABASE_TYPE=SQLite
CONNECTION_STRING=Data Source=scheduler.db

# Security Settings
DEFAULT_SESSION_TIMEOUT=120
ENABLE_DETAILED_LOGGING=true

# Application Settings
DEFAULT_PORT=5000
ENABLE_SWAGGER=false