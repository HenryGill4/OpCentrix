@model OpCentrix.Models.ViewModels.FooterSummaryViewModel
@if (Model.MachineHours.Any())
{
    <div class="mt-4 flex items-center justify-between border-t pt-2 text-sm">
        <div>
            @foreach (var kv in Model.MachineHours)
            {
                <span class="mr-4">@kv.Key: @kv.Value.ToString("0.##") hrs</span>
            }
        </div>
        <a href="/Analytics" class="text-indigo-600 hover:underline">View Analytics</a>
    </div>
}
