<div class="mt-6" id="footer-summary">
    <partial name="_FooterSummary" model="Model.Summary" />
</div>

<!-- Modal Container -->
<div id="modal-container" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50 modal-backdrop"></div>

