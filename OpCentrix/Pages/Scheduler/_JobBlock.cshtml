@model OpCentrix.Models.Job

@{
    var color = "bg-blue-200";
}
<div class="rounded-xl shadow-md hover:shadow-lg transition px-2 py-1 text-xs @color cursor-pointer"
     hx-get="/Scheduler/ShowAddModal?machineId=@Model.MachineId&date=@Model.ScheduledStart.ToString("yyyy-MM-dd")&id=@Model.Id"
     hx-target="#modal-content" hx-swap="innerHTML">
    <div class="font-semibold">@Model.PartNumber</div>
    <div class="text-sm">@Model.ScheduledStart:MMM d â†’ @Model.ScheduledEnd:MMM d</div>
    @if (Model.Quantity > 1)
    {
        <div class="text-xs">Qty @Model.Quantity</div>
    }
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="text-xs text-gray-500">@Model.Notes</div>
    }
    @if (!string.IsNullOrEmpty(Model.Part?.Description))
    {
        <div class="text-xs text-gray-400 italic">@Model.Part.Description</div>
    }
</div>
