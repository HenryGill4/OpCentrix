        console.log('?? [JOB-FORM] updateDurationDisplay called');
        
        try {
            const startInput = document.getElementById('start-input');
            const endInput = document.getElementById('end-input');
            const durationDisplay = document.getElementById('duration-display');
            
            if (!startInput || !endInput || !durationDisplay) {
                console.warn('?? [JOB-FORM] Duration display elements not found');
                return;
            }
            
            const startTime = new Date(startInput.value);
            const endTime = new Date(endInput.value);
            
            if (isNaN(startTime.getTime()) || isNaN(endTime.getTime())) {
                durationDisplay.textContent = 'Invalid dates';
                return;
            }
            
            const durationMs = endTime.getTime() - startTime.getTime();
            const durationHours = durationMs / (1000 * 60 * 60);
            
            if (durationHours < 0) {
                durationDisplay.textContent = 'End time before start time';
                durationDisplay.style.color = '#dc2626';
                return;
            }
            
            // Update hidden duration field
            const hiddenDurationHours = document.getElementById('hidden-duration-hours');
            if (hiddenDurationHours) {
                hiddenDurationHours.value = durationHours.toFixed(2);
            }
            
            // Format display
            if (durationHours >= 24) {
                const days = Math.floor(durationHours / 24);
                const hours = (durationHours % 24).toFixed(1);
                durationDisplay.textContent = `${days}d ${hours}h`;
            } else {
                durationDisplay.textContent = `${durationHours.toFixed(1)} hours`;
            }
            
