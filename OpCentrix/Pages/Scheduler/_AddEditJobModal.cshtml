window.deleteJobWithToken = function(jobId) {
    if (!jobId) {
        console.error('?? [JOB-FORM] No job ID provided for deletion');
        return;
    }
    
    if (confirm('Are you sure you want to delete this job? This action cannot be undone.')) {
        console.log('??? [JOB-FORM] Deleting job:', jobId);
        
        try {
            // Get the antiforgery token from the form
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : null;
            
            if (!token) {
                console.error('?? [JOB-FORM] Antiforgery token not found');
                alert('Security token not found. Please refresh the page and try again.');
                return;
            }
            
            console.log('?? [JOB-FORM] Using antiforgery token for delete request');
            
            // Use HTMX with POST method for better compatibility with Razor Pages
            if (typeof htmx !== 'undefined') {
                htmx.ajax('POST', `/Scheduler?handler=DeleteJob&id=${jobId}`, {
                    headers: {
                        'RequestVerificationToken': token,
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    values: {
                        '__RequestVerificationToken': token,
                        'id': jobId
                    },
                    target: '#modal-container',
                    swap: 'innerHTML'
                }).then(() => {
                    console.log('? [JOB-FORM] Job deletion successful');
                    
                    if (window.closeJobModal) {
                        window.closeJobModal();
                    }
                    
                    if (window.showSuccessNotification) {
                        window.showSuccessNotification('Job deleted successfully!');
                    }
                    
                    // Refresh the scheduler page
                    setTimeout(() => {
                        console.log('?? [JOB-FORM] Reloading page to refresh data');
                        window.location.reload();
                    }, 1000);
                    
                }).catch((error) => {
                    console.error('?? [JOB-FORM] Error deleting job:', error);
                    
                    if (window.showErrorNotification) {
                        window.showErrorNotification('Error deleting job. Please try again.');
                    } else {
                        alert('Error deleting job. Please try again.');
                    }
                });
            } else {
                console.error('?? [JOB-FORM] HTMX not available for job deletion');
                alert('HTMX library not loaded. Please refresh the page and try again.');
            }
        } catch (error) {
            console.error('?? [JOB-FORM] Critical error in delete function:', error);
            alert('An error occurred. Please refresh the page and try again.');
        }
    }
};

window.deleteJob = function(jobId) {
