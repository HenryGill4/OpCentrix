    // Update end time from start time
    updateEndTimeFromStart() {
        console.log('?? [JOB-FORM] updateEndTimeFromStart called');
        
        try {
            const startInput = document.getElementById('start-input');
            const endInput = document.getElementById('end-input');
            const hiddenEstimatedHours = document.getElementById('hidden-estimated-hours');
            const quantityInput = document.getElementById('quantity-input');
            
            if (!startInput || !endInput) {
                console.warn('?? [JOB-FORM] Start or end input not found');
                return;
            }
            
            const startTime = new Date(startInput.value);
            if (isNaN(startTime.getTime())) {
                console.warn('?? [JOB-FORM] Invalid start time');
                return;
            }
            
            // Get estimated hours and quantity
            const estimatedHours = parseFloat(hiddenEstimatedHours?.value) || 8;
            const quantity = parseInt(quantityInput?.value) || 1;
            const totalHours = estimatedHours * quantity;
            
            // Calculate end time
            const endTime = new Date(startTime.getTime() + (totalHours * 60 * 60 * 1000));
            
            // Format for datetime-local input
            const endTimeString = endTime.toISOString().slice(0, 16);
            endInput.value = endTimeString;
            
            console.log(`? [JOB-FORM] Updated end time: ${totalHours}h (${estimatedHours}h × ${quantity})`);
            
            this.updateDurationDisplay();
            
        } catch (error) {
            console.error('?? [JOB-FORM] Error updating end time from start:', error);
        }
