@using OpCentrix.Models
@model OpCentrix.Models.ViewModels.AddEditJobViewModel

<!-- Enhanced Modal Container with OpCentrix Design System -->
<div class="modal-backdrop" 
     style="position: fixed; inset: 0; background: var(--opcentrix-bg-overlay); z-index: var(--opcentrix-z-modal); backdrop-filter: blur(4px); display: flex; align-items: center; justify-content: center; padding: var(--opcentrix-spacing-4);"
     onclick="closeJobModal()">
    <div class="opcentrix-card" 
         style="max-width: 56rem; width: 100%; max-height: 90vh; overflow-y: auto; box-shadow: var(--opcentrix-shadow-2xl); margin: 0;"
         onclick="event.stopPropagation()">
        <form hx-post="/Scheduler?handler=AddOrUpdateJob" 
              hx-target="#machine-row-@Model.Job.MachineId" 
              hx-swap="outerHTML"
              hx-on::before-request="showFormLoading()" 
              hx-on::after-request="handleFormResponse(event)"
              id="job-form"
              novalidate>
            
            @Html.AntiForgeryToken()
            
            <!-- Modal Header -->
            <div style="display: flex; justify-content: space-between; align-items: center; padding: var(--opcentrix-spacing-6) var(--opcentrix-spacing-6) var(--opcentrix-spacing-4) var(--opcentrix-spacing-6); border-bottom: 2px solid var(--opcentrix-border); background: var(--opcentrix-bg-tertiary);">
                <h2 style="font-size: var(--opcentrix-font-size-2xl); font-weight: 700; color: var(--opcentrix-text-primary); margin: 0; font-family: var(--opcentrix-font-family);">
                    @(Model.Job.Id == 0 ? "Schedule New SLS Job" : $"Edit Job #{Model.Job.Id}")
                </h2>
                <button type="button" 
                        onclick="closeJobModal()" 
                        style="background: none; border: none; color: var(--opcentrix-text-tertiary); padding: var(--opcentrix-spacing-2); cursor: pointer; border-radius: var(--opcentrix-radius); transition: all var(--opcentrix-transition-base); font-size: 0; line-height: 1;"
                        onmouseover="this.style.background='var(--opcentrix-bg-tertiary)'; this.style.color='var(--opcentrix-text-primary)'"
                        onmouseout="this.style.background='none'; this.style.color='var(--opcentrix-text-tertiary)'"
                        aria-label="Close">
                    <svg style="width: 24px; height: 24px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Error Display -->
            @if (Model.Errors?.Any() == true)
            {
                <div style="margin: var(--opcentrix-spacing-6) var(--opcentrix-spacing-6) 0 var(--opcentrix-spacing-6); padding: var(--opcentrix-spacing-4); background: linear-gradient(135deg, var(--opcentrix-danger) 0%, var(--opcentrix-danger-dark) 100%); color: var(--opcentrix-text-on-primary); border: 1px solid var(--opcentrix-danger-dark); border-radius: var(--opcentrix-radius); box-shadow: var(--opcentrix-shadow); animation: shake 0.3s ease-in-out;">
                    <div style="display: flex; align-items: center; margin-bottom: var(--opcentrix-spacing-2);">
                        <svg style="width: 20px; height: 20px; margin-right: var(--opcentrix-spacing-2); flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                        <strong style="font-weight: 600; font-size: var(--opcentrix-font-size-sm);">Please correct the following issues:</strong>
                    </div>
                    <ul style="margin: 0; padding-left: var(--opcentrix-spacing-4); list-style-type: disc; font-size: var(--opcentrix-font-size-sm); line-height: var(--opcentrix-line-height-relaxed);">
                        @foreach (var error in Model.Errors)
                        {
                            <li style="margin-bottom: var(--opcentrix-spacing-1);">@error</li>
                        }
                    </ul>
                </div>
            }

            <!-- Hidden Fields -->
            <input type="hidden" name="Job.Id" value="@Model.Job.Id" />
            
            <!-- Form Content -->
            <div style="padding: var(--opcentrix-spacing-6);">
                <!-- Basic Job Information -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-6); margin-bottom: var(--opcentrix-spacing-6);">
                    <!-- Left Column -->
                    <div style="display: flex; flex-direction: column; gap: var(--opcentrix-spacing-4);">
                        <h3 style="font-size: var(--opcentrix-font-size-lg); font-weight: 600; color: var(--opcentrix-text-primary); border-bottom: 2px solid var(--opcentrix-border); padding-bottom: var(--opcentrix-spacing-2); margin: 0 0 var(--opcentrix-spacing-2) 0; font-family: var(--opcentrix-font-family);">Job Details</h3>
                        
                        <div style="display: flex; flex-direction: column;">
                            <label class="opcentrix-label opcentrix-label-required" for="machine-select" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Machine</label>
                            <select name="Job.MachineId" id="machine-select" class="opcentrix-input" required onchange="JobForm.filterPartsByMachine()" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);">
                                <option value="TI1" selected="@(Model.Job.MachineId == "TI1")">TI1 - Titanium Line 1 (TruPrint 3000)</option>
                                <option value="TI2" selected="@(Model.Job.MachineId == "TI2")">TI2 - Titanium Line 2 (TruPrint 3000)</option>
                                <option value="INC" selected="@(Model.Job.MachineId == "INC")">INC - Inconel Line (TruPrint 5000)</option>
                            </select>
                            <small style="color: var(--opcentrix-text-tertiary); font-size: var(--opcentrix-font-size-xs); margin-top: var(--opcentrix-spacing-1);">Each machine is configured for specific materials</small>
                        </div>

                        <div style="display: flex; flex-direction: column;">
                            <label class="opcentrix-label opcentrix-label-required" for="part-select" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Part</label>
                            <select name="Job.PartId" id="part-select" class="opcentrix-input" required onchange="updateJobFromPart()" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);">
                                <option value="">Select a part...</option>
                                @foreach (var part in Model.Parts.OrderBy(p => p.PartNumber))
                                {
                                    <option value="@part.Id" 
                                            selected="@(Model.Job.PartId == part.Id)"
                                            data-part-number="@part.PartNumber"
                                            data-estimated-hours="@(part.HasAdminOverride ? part.EffectiveDurationHours.ToString("F1") : part.EstimatedHours.ToString("F1"))"
                                            data-sls-material="@part.SlsMaterial"
                                            data-material-type="@(part.SlsMaterial?.Contains("Ti-6Al-4V") == true ? "Titanium" : part.SlsMaterial?.Contains("Inconel") == true ? "Inconel" : "Other")"
                                            data-laser-power="@part.RecommendedLaserPower"
                                            data-scan-speed="@part.RecommendedScanSpeed"
                                            data-layer-thickness="@part.RecommendedLayerThickness"
                                            data-hatch-spacing="@part.RecommendedHatchSpacing"
                                            data-build-temperature="@part.RecommendedBuildTemperature"
                                            data-argon-purity="@part.RequiredArgonPurity.ToString("F1")"
                                            data-oxygen-content="@part.MaxOxygenContent"
                                            data-powder-usage="@part.PowderRequirementKg.ToString("F2")"
                                            data-preheating-time="@part.PreheatingTimeMinutes"
                                            data-cooling-time="@part.CoolingTimeMinutes"
                                            data-post-processing-time="@part.PostProcessingTimeMinutes">
                                        @part.PartNumber - @part.Description
                                    </option>
                                }
                            </select>
                            <small style="color: var(--opcentrix-text-tertiary); font-size: var(--opcentrix-font-size-xs); margin-top: var(--opcentrix-spacing-1);">Only parts compatible with the selected machine are shown</small>
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-4);">
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label opcentrix-label-required" for="quantity-input" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Quantity</label>
                                <input type="number" name="Job.Quantity" id="quantity-input" value="@Model.Job.Quantity" min="1" max="1000" 
                                       class="opcentrix-input" required onchange="updateEndTimeFromQuantity()" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                            
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="priority-select" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Priority</label>
                                <select name="Job.Priority" id="priority-select" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);">
                                    <option value="1" selected="@(Model.Job.Priority == 1)">1 - Critical (Rush)</option>
                                    <option value="2" selected="@(Model.Job.Priority == 2)">2 - High Priority</option>
                                    <option value="3" selected="@(Model.Job.Priority == 3)">3 - Normal</option>
                                    <option value="4" selected="@(Model.Job.Priority == 4)">4 - Low Priority</option>
                                    <option value="5" selected="@(Model.Job.Priority == 5)">5 - Background</option>
                                </select>
                            </div>
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-4);">
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label opcentrix-label-required" for="start-input" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Start Date & Time</label>
                                <input type="datetime-local" name="Job.ScheduledStart" id="start-input"
                                       value="@Model.Job.ScheduledStart.ToString("yyyy-MM-ddTHH:mm")" 
                                       class="opcentrix-input" 
                                       required onchange="updateEndTimeFromStart()" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                            
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label opcentrix-label-required" for="end-input" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">End Date & Time</label>
                                <input type="datetime-local" name="Job.ScheduledEnd" id="end-input"
                                       value="@Model.Job.ScheduledEnd.ToString("yyyy-MM-ddTHH:mm")" 
                                       class="opcentrix-input" required style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                                <small style="color: var(--opcentrix-text-tertiary); font-size: var(--opcentrix-font-size-xs); margin-top: var(--opcentrix-spacing-1);">Duration: <span id="duration-display">@((Model.Job.ScheduledEnd - Model.Job.ScheduledStart).TotalHours.ToString("F1")) hours</span></small>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div style="display: flex; flex-direction: column; gap: var(--opcentrix-spacing-4);">
                        <h3 style="font-size: var(--opcentrix-font-size-lg); font-weight: 600; color: var(--opcentrix-text-primary); border-bottom: 2px solid var(--opcentrix-border); padding-bottom: var(--opcentrix-spacing-2); margin: 0 0 var(--opcentrix-spacing-2) 0; font-family: var(--opcentrix-font-family);">SLS Process Parameters</h3>
                        
                        <div style="display: flex; flex-direction: column;">
                            <label class="opcentrix-label opcentrix-label-required" for="sls-material" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Material</label>
                            <select name="Job.SlsMaterial" id="sls-material" class="opcentrix-input" required style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);">
                                <option value="Ti-6Al-4V Grade 5" 
                                        selected="@(Model.Job.SlsMaterial == "Ti-6Al-4V Grade 5")"
                                        data-compatible-machines="TI1,TI2">Ti-6Al-4V Grade 5 (Aerospace)</option>
                                <option value="Ti-6Al-4V ELI Grade 23" 
                                        selected="@(Model.Job.SlsMaterial == "Ti-6Al-4V ELI Grade 23")"
                                        data-compatible-machines="TI1,TI2">Ti-6Al-4V ELI Grade 23 (Medical)</option>
                                <option value="Inconel 718" 
                                        selected="@(Model.Job.SlsMaterial == "Inconel 718")"
                                        data-compatible-machines="INC">Inconel 718 (High-Temp)</option>
                                <option value="Inconel 625" 
                                        selected="@(Model.Job.SlsMaterial == "Inconel 625")"
                                        data-compatible-machines="INC">Inconel 625 (Corrosion Resistant)</option>
                            </select>
                            <small style="color: var(--opcentrix-text-tertiary); font-size: var(--opcentrix-font-size-xs); margin-top: var(--opcentrix-spacing-1);">Material options filtered by machine compatibility</small>
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-4);">
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="laser-power" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Laser Power (W)</label>
                                <input type="number" name="Job.LaserPowerWatts" id="laser-power" value="@Model.Job.LaserPowerWatts" min="50" max="400" step="1" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                            
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="scan-speed" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Scan Speed (mm/s)</label>
                                <input type="number" name="Job.ScanSpeedMmPerSec" id="scan-speed" value="@Model.Job.ScanSpeedMmPerSec" min="100" max="5000" step="10" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-4);">
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="layer-thickness" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Layer Thickness (?m)</label>
                                <input type="number" name="Job.LayerThicknessMicrons" id="layer-thickness" value="@Model.Job.LayerThicknessMicrons" min="20" max="60" step="5" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                            
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="hatch-spacing" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Hatch Spacing (?m)</label>
                                <input type="number" name="Job.HatchSpacingMicrons" id="hatch-spacing" value="@Model.Job.HatchSpacingMicrons" min="50" max="200" step="5" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-4);">
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="build-temperature" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Build Temperature (°C)</label>
                                <input type="number" name="Job.BuildTemperatureCelsius" id="build-temperature" value="@Model.Job.BuildTemperatureCelsius" min="100" max="300" step="5" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                            
                            <div style="display: flex; flex-direction: column;">
                                <label class="opcentrix-label" for="powder-usage" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Estimated Powder (kg)</label>
                                <input type="number" name="Job.EstimatedPowderUsageKg" id="powder-usage" value="@Model.Job.EstimatedPowderUsageKg.ToString("F2")" min="0" max="50" step="0.1" class="opcentrix-input" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div style="margin-bottom: var(--opcentrix-spacing-6);">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--opcentrix-spacing-4); margin-bottom: var(--opcentrix-spacing-4);">
                        <div style="display: flex; flex-direction: column;">
                            <label class="opcentrix-label" for="order-number" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Customer Order Number</label>
                            <input type="text" name="Job.CustomerOrderNumber" id="order-number" value="@Model.Job.CustomerOrderNumber" maxlength="100" class="opcentrix-input" placeholder="CO-2024-001" style="width: 100%; padding: var(--opcentrix-spacing-3) var(--opcentrix-spacing-4); border: 2px solid var(--opcentrix-border); border-radius: var(--opcentrix-radius); font-size: var(--opcentrix-font-size-sm); font-family: var(--opcentrix-font-family); transition: all var(--opcentrix-transition-base); background: var(--opcentrix-bg-secondary); color: var(--opcentrix-text-primary);" />
                        </div>
                        
                        <div style="display: flex; flex-direction: column;">
                            <label class="opcentrix-label" for="operator-input" style="display: block; font-size: var(--opcentrix-font-size-sm); font-weight: 600; color: var(--opcentrix-text-secondary); margin-bottom: var(--opcentrix-spacing-2); line-height: var(--opcentrix-line-height-tight);">Operator</label>
