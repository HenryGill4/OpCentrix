    updateJobFromPart() {
        console.log('?? [JOB-FORM] updateJobFromPart called');
        
        try {
            const partSelect = document.getElementById('part-select');
            const selectedOption = partSelect?.options[partSelect.selectedIndex];
            
            if (!selectedOption || !selectedOption.value) {
                console.log('?? [JOB-FORM] No part selected');
                return;
            }
            
            console.log('?? [JOB-FORM] Updating job from part:', selectedOption.text);
            
            // Update part number
