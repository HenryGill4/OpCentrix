            const layerThicknessInput = document.getElementById('layer-thickness');
            if (layerThicknessInput && layerThickness) {
                layerThicknessInput.value = layerThickness;
            }
            
            // Hatch spacing
            const hatchSpacing = selectedOption.getAttribute('data-hatch-spacing');
            const hatchSpacingInput = document.getElementById('hatch-spacing');
            if (hatchSpacingInput && hatchSpacing) {
                hatchSpacingInput.value = hatchSpacing;
            }
            
            // Build temperature
            const buildTemperature = selectedOption.getAttribute('data-build-temperature');
            const buildTemperatureInput = document.getElementById('build-temperature');
            if (buildTemperatureInput && buildTemperature) {
                buildTemperatureInput.value = buildTemperature;
