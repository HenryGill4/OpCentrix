     */
    window.handleDeletePartClick = function(partId, partNumber, partName) {
        console.log('??? [PARTS] Delete part button clicked for:', partNumber);
        
        if (!partId || partId <= 0) {
            console.error('? [PARTS] Invalid part ID for delete:', partId);
            showToast('error', 'Invalid part ID');
            return;
        }
        
        const message = `Are you sure you want to delete part "${partNumber}" (${partName})?\n\nThis action cannot be undone.`;
        
        if (confirm(message)) {
            console.log('? [PARTS] Delete confirmed, submitting form');
            
            try {
                const form = document.createElement('form');
                form.method = 'post';
                form.action = '/Admin/Parts?handler=Delete';
                form.style.display = 'none';
                
                // Add antiforgery token
                if (antiforgeryToken) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = antiforgeryToken;
                    form.appendChild(tokenInput);
                }
                
                // Add part ID
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = partId;
                form.appendChild(idInput);
                
                // Submit form
                document.body.appendChild(form);
                form.submit();
                
                console.log('? [PARTS] Delete form submitted');
                
            } catch (error) {
                console.error('? [PARTS] Error creating delete form:', error);
