                    if (bsModal) {
                        bsModal.hide();
                    } else {
                        // Fallback if instance not found
                        modal.style.display = 'none';
                        modal.classList.remove('show');
                    }
                } else {
                    // Manual modal hiding
                    modal.style.display = 'none';
                    modal.classList.remove('show');
