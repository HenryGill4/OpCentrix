@page
@model OpCentrix.Pages.Admin.Workflows.TemplatesModel
@{
    ViewData["Title"] = "Workflow Templates";
    ViewData["Description"] = "Advanced Workflow Template Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-900">
                <i class="fas fa-sitemap me-2" style="color: #8b5cf6;"></i>
                Workflow Templates
            </h1>
            <p class="text-muted mb-0">Create and manage advanced manufacturing workflow templates</p>
        </div>
        <div>
            <button type="button" class="btn btn-primary" style="background-color: #8b5cf6; border-color: #8b5cf6;" onclick="createTemplate()">
                <i class="fas fa-plus me-2"></i>New Template
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header" style="background-color: rgba(139, 92, 246, 0.1);">
            <h5 class="card-title mb-0" style="color: #8b5cf6;">
                <i class="fas fa-project-diagram me-2"></i>
                Workflow Templates
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Coming Soon:</strong> This page will provide advanced workflow template management for complex manufacturing processes.
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="card h-100" style="border-color: #8b5cf6;">
                        <div class="card-body text-center">
                            <i class="fas fa-sitemap fa-3x mb-3" style="color: #8b5cf6;"></i>
                            <h5 class="card-title">Multi-Stage Templates</h5>
                            <p class="card-text">Pre-configured templates for complex manufacturing workflows</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100" style="border-color: #8b5cf6;">
                        <div class="card-body text-center">
                            <i class="fas fa-tasks fa-3x mb-3" style="color: #8b5cf6;"></i>
                            <h5 class="card-title">Stage Dependencies</h5>
                            <p class="card-text">Define complex stage relationships and dependencies</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100" style="border-color: #8b5cf6;">
                        <div class="card-body text-center">
                            <i class="fas fa-users-cog fa-3x mb-3" style="color: #8b5cf6;"></i>
                            <h5 class="card-title">Resource Allocation</h5>
                            <p class="card-text">Automatic resource assignment and scheduling</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function createTemplate() {
    alert('Workflow Template creation will be available soon!');
}
</script>