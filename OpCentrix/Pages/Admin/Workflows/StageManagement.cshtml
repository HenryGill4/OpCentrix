@page
@model OpCentrix.Pages.Admin.Workflows.StageManagementModel
@{
    ViewData["Title"] = "Advanced Stage Management";
    ViewData["PageHeader"] = "?? Advanced Stage Management";
    ViewData["PageDescription"] = "Manage workflow templates, stage dependencies, and resource allocation";
}

<!-- Include Stage Management CSS and JS -->
<link rel="stylesheet" href="~/css/admin/stage-management.css" asp-append-version="true" />

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-project-diagram me-2"></i>
                        Advanced Stage Management
                    </h2>
                    <p class="text-muted mb-0">Manage complex manufacturing workflows with templates, dependencies, and resource pools</p>
                </div>
                <div>
                    <a href="/Admin/ProductionStages" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-cogs me-1"></i>
                        Basic Stages
                    </a>
                    <a href="/Admin/Parts" class="btn btn-outline-info me-2">
                        <i class="fas fa-cube me-1"></i>
                        Parts Management
                    </a>
                    <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-plus me-1"></i>
                        Create New
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#workflowTemplateModal">
                            <i class="fas fa-sitemap me-2"></i>Workflow Template
                        </a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#stageDependencyModal">
                            <i class="fas fa-link me-2"></i>Stage Dependency
                        </a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#resourcePoolModal">
                            <i class="fas fa-users-cog me-2"></i>Resource Pool
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Tabs -->
    <ul class="nav nav-tabs mb-4" id="managementTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="templates-tab" data-bs-toggle="tab" data-bs-target="#templates" type="button" role="tab">
                <i class="fas fa-sitemap me-2"></i>
                Workflow Templates
                <span class="badge bg-primary ms-2">@Model.WorkflowTemplates.Count</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="dependencies-tab" data-bs-toggle="tab" data-bs-target="#dependencies" type="button" role="tab">
                <i class="fas fa-link me-2"></i>
                Stage Dependencies
                <span class="badge bg-info ms-2">@Model.StageDependencies.Count</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="resources-tab" data-bs-toggle="tab" data-bs-target="#resources" type="button" role="tab">
                <i class="fas fa-users-cog me-2"></i>
                Resource Pools
                <span class="badge bg-success ms-2">@Model.ResourcePools.Count</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">
                <i class="fas fa-chart-bar me-2"></i>
                System Overview
            </button>
        </li>
    </ul>

    <div class="tab-content" id="managementTabsContent">
        <!-- Workflow Templates Tab -->
        <div class="tab-pane fade show active" id="templates" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-sitemap me-2 text-primary"></i>
                        Workflow Templates
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.WorkflowTemplates.Any())
                    {
                        <div class="row">
                            @foreach (var template in Model.WorkflowTemplates.OrderBy(t => t.Name))
                            {
                                var stats = Model.WorkflowStatistics.GetValueOrDefault(template.Id, new WorkflowStats());
                                var complexityColor = template.Complexity switch {
                                    "Simple" => "success",
                                    "Medium" => "info", 
                                    "Complex" => "warning",
                                    "Very Complex" => "danger",
                                    _ => "secondary"
                                };
                                
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100 template-card" data-template-id="@template.Id">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">@template.Name</h6>
                                            <span class="badge bg-@complexityColor">@template.Complexity</span>
                                        </div>
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(template.Description))
                                            {
                                                <p class="text-muted small">@template.Description</p>
                                            }
                                            @if (!string.IsNullOrEmpty(template.Category))
                                            {
                                                <div class="mb-2">
                                                    <span class="badge bg-light text-dark">@template.Category</span>
                                                </div>
                                            }
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <div class="fw-bold text-info">@template.EstimatedDurationHours.ToString("F1")h</div>
                                                    <small class="text-muted">Duration</small>
                                                </div>
                                                <div class="col-6">
                                                    <div class="fw-bold text-success">$@template.EstimatedCost.ToString("F2")</div>
                                                    <small class="text-muted">Cost</small>
                                                </div>
                                            </div>
                                            @if (stats.UsageCount > 0)
                                            {
                                                <div class="mt-3 pt-3 border-top">
                                                    <div class="row text-center">
                                                        <div class="col-4">
                                                            <div class="small fw-bold">@stats.UsageCount</div>
                                                            <div class="small text-muted">Used</div>
                                                        </div>
                                                        <div class="col-4">
                                                            <div class="small fw-bold">@stats.CompletedJobs</div>
                                                            <div class="small text-muted">Done</div>
                                                        </div>
                                                        <div class="col-4">
                                                            <div class="small fw-bold">@stats.SuccessRate.ToString("F0")%</div>
                                                            <div class="small text-muted">Success</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100">
                                                <button class="btn btn-outline-primary btn-sm" onclick="viewTemplate(@template.Id)" data-bs-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-info btn-sm" onclick="editTemplate(@template.Id)" data-bs-toggle="tooltip" title="Edit Template">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-danger btn-sm @(stats.UsageCount > 0 ? "disabled" : "")" 
                                                        onclick="@(stats.UsageCount > 0 ? "void(0)" : $"deleteTemplate({template.Id}, '{template.Name}')")" 
                                                        data-bs-toggle="tooltip" 
                                                        title="@(stats.UsageCount > 0 ? $"Cannot delete - used by {stats.UsageCount} parts" : "Delete Template")">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-sitemap fa-3x mb-3"></i>
                            <h5>No Workflow Templates</h5>
                            <p>Create workflow templates to standardize manufacturing processes and integrate with the Parts form.</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#workflowTemplateModal">
                                <i class="fas fa-plus me-1"></i>
                                Create First Template
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Stage Dependencies Tab -->
        <div class="tab-pane fade" id="dependencies" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-link me-2 text-info"></i>
                        Stage Dependencies
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.StageDependencies.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Dependent Stage</th>
                                        <th>Prerequisite Stage</th>
                                        <th>Dependency Type</th>
                                        <th>Delay</th>
                                        <th>Optional</th>
                                        <th width="120">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dependency in Model.StageDependencies.OrderBy(d => d.DependentStage.DisplayOrder))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="@dependency.DependentStage.StageIcon me-2" style="color: @dependency.DependentStage.StageColor;"></i>
                                                    <strong>@dependency.DependentStage.Name</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="@dependency.PrerequisiteStage.StageIcon me-2" style="color: @dependency.PrerequisiteStage.StageColor;"></i>
                                                    @dependency.PrerequisiteStage.Name
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@dependency.DependencyType</span>
                                            </td>
                                            <td>
                                                @if (dependency.DelayHours > 0)
                                                {
                                                    <span class="text-warning">@dependency.DelayHours.ToString("F0")h</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None</span>
                                                }
                                            </td>
                                            <td>
                                                @if (dependency.IsOptional)
                                                {
                                                    <span class="badge bg-info">Optional</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Required</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-info" onclick="editDependency(@dependency.Id)" data-bs-toggle="tooltip" title="Edit Dependency">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" onclick="deleteDependency(@dependency.Id)" data-bs-toggle="tooltip" title="Delete Dependency">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-link fa-3x mb-3"></i>
                            <h5>No Stage Dependencies</h5>
                            <p>Define dependencies between stages to ensure proper workflow order and improve scheduling accuracy.</p>
                            <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#stageDependencyModal">
                                <i class="fas fa-plus me-1"></i>
                                Create First Dependency
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Resource Pools Tab -->
        <div class="tab-pane fade" id="resources" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users-cog me-2 text-success"></i>
                        Resource Pools
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ResourcePools.Any())
                    {
                        <div class="row">
                            @foreach (var pool in Model.ResourcePools.OrderBy(p => p.Name))
                            {
                                var typeColor = pool.ResourceType switch {
                                    "Machine" => "primary",
                                    "Operator" => "success", 
                                    "Tool" => "warning",
                                    "Equipment" => "info",
                                    _ => "secondary"
                                };
                                
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">@pool.Name</h6>
                                            <span class="badge bg-@typeColor">@pool.ResourceType</span>
                                        </div>
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(pool.Description))
                                            {
                                                <p class="text-muted small">@pool.Description</p>
                                            }
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <div class="fw-bold text-primary">@pool.MaxConcurrentAllocations</div>
                                                    <small class="text-muted">Max Concurrent</small>
                                                </div>
                                                <div class="col-6">
                                                    <div class="fw-bold text-@(pool.AutoAssign ? "success" : "muted")">
                                                        @(pool.AutoAssign ? "Auto" : "Manual")
                                                    </div>
                                                    <small class="text-muted">Assignment</small>
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar bg-@typeColor" style="width: @pool.GetUtilizationPercentage()%"></div>
                                                </div>
                                                <small class="text-muted">@pool.GetUtilizationPercentage().ToString("F0")% Utilized</small>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100">
                                                <button class="btn btn-outline-success btn-sm" onclick="viewPool(@pool.Id)" data-bs-toggle="tooltip" title="View Pool Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-info btn-sm" onclick="editPool(@pool.Id)" data-bs-toggle="tooltip" title="Edit Pool">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-danger btn-sm" onclick="deletePool(@pool.Id, '@pool.Name')" data-bs-toggle="tooltip" title="Delete Pool">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-users-cog fa-3x mb-3"></i>
                            <h5>No Resource Pools</h5>
                            <p>Create resource pools to manage machines, operators, and equipment allocation efficiently.</p>
                            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#resourcePoolModal">
                                <i class="fas fa-plus me-1"></i>
                                Create First Pool
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- System Overview Tab -->
        <div class="tab-pane fade" id="overview" role="tabpanel">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-cogs fa-2x text-primary mb-2"></i>
                            <h4 class="text-primary">@Model.ProductionStages.Count</h4>
                            <p class="text-muted mb-0">Production Stages</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-sitemap fa-2x text-success mb-2"></i>
                            <h4 class="text-success">@Model.WorkflowTemplates.Count</h4>
                            <p class="text-muted mb-0">Workflow Templates</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-link fa-2x text-info mb-2"></i>
                            <h4 class="text-info">@Model.StageDependencies.Count</h4>
                            <p class="text-muted mb-0">Dependencies</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-users-cog fa-2x text-warning mb-2"></i>
                            <h4 class="text-warning">@Model.ResourcePools.Count</h4>
                            <p class="text-muted mb-0">Resource Pools</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-cogs me-2"></i>
                                Production Stages
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.ProductionStages.Any())
                            {
                                @foreach (var stage in Model.ProductionStages.Take(10))
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge me-2" style="background-color: @stage.StageColor;">@stage.DisplayOrder</span>
                                        <i class="@stage.StageIcon me-2" style="color: @stage.StageColor;"></i>
                                        <span>@stage.Name</span>
                                        @if (!string.IsNullOrEmpty(stage.Department))
                                        {
                                            <small class="text-muted ms-2">(@stage.Department)</small>
                                        }
                                    </div>
                                }
                                @if (Model.ProductionStages.Count > 10)
                                {
                                    <small class="text-muted">... and @(Model.ProductionStages.Count - 10) more</small>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No stages configured.</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-robot me-2"></i>
                                Available Machines
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.AvailableMachines.Any())
                            {
                                @foreach (var machine in Model.AvailableMachines.Take(10))
                                {
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <div>
                                            <strong>@machine.MachineId</strong>
                                            <small class="text-muted ms-2">@machine.Name</small>
                                        </div>
                                        <span class="badge bg-@(machine.Status == "Idle" ? "success" : machine.Status == "Running" ? "primary" : "secondary")">
                                            @machine.Status
                                        </span>
                                    </div>
                                }
                                @if (Model.AvailableMachines.Count > 10)
                                {
                                    <small class="text-muted">... and @(Model.AvailableMachines.Count - 10) more</small>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No machines configured.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-link me-2"></i>
                                Integration with Parts Form
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                The Advanced Stage Management system integrates seamlessly with the 
                                <a href="/Admin/Parts" class="text-decoration-none">Parts Management form</a> 
                                to provide workflow templates and stage dependencies.
                            </p>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Template-based part creation</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Automatic stage dependencies</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Resource pool allocation</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Workflow Template Modal -->
<div class="modal fade" id="workflowTemplateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateWorkflowTemplate">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-sitemap me-2"></i>
                        Create Workflow Template
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="NewWorkflowTemplate.Name" class="form-label">Template Name *</label>
                                <input asp-for="NewWorkflowTemplate.Name" class="form-control" placeholder="e.g., Standard Suppressor Workflow" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="NewWorkflowTemplate.Complexity" class="form-label">Complexity</label>
                                <select asp-for="NewWorkflowTemplate.Complexity" class="form-select">
                                    <option value="Simple">Simple</option>
                                    <option value="Medium" selected>Medium</option>
                                    <option value="Complex">Complex</option>
                                    <option value="Very Complex">Very Complex</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="NewWorkflowTemplate.Description" class="form-label">Description</label>
                        <textarea asp-for="NewWorkflowTemplate.Description" class="form-control" rows="3" placeholder="Brief description of this workflow template"></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewWorkflowTemplate.Category" class="form-label">Category</label>
                                <select asp-for="NewWorkflowTemplate.Category" class="form-select">
                                    <option value="">Select Category</option>
                                    <option value="Suppressors">Suppressors</option>
                                    <option value="Components">Components</option>
                                    <option value="Prototypes">Prototypes</option>
                                    <option value="Custom">Custom</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewWorkflowTemplate.EstimatedDurationHours" class="form-label">Estimated Duration (hours)</label>
                                <input asp-for="NewWorkflowTemplate.EstimatedDurationHours" type="number" step="0.5" min="0.5" class="form-control" value="8.0">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="NewWorkflowTemplate.EstimatedCost" class="form-label">Estimated Cost ($)</label>
                        <input asp-for="NewWorkflowTemplate.EstimatedCost" type="number" step="0.01" min="0" class="form-control" placeholder="0.00">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Create Template
                    </button>
