@page
@model OpCentrix.Pages.Admin.ProductionStages.TemplatesModel
@{
    ViewData["Title"] = "Stage Templates";
    ViewData["Description"] = "Manage stage templates for efficient part configuration";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-layer-group me-2 text-primary"></i>
                        Stage Templates
                    </h1>
                    <p class="text-muted mb-0">Pre-configured stage combinations for efficient part setup</p>
                </div>
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTemplateModal">
                        <i class="fas fa-plus me-2"></i>Create Template
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <div class="display-6 text-primary mb-2">@Model.StageTemplates.Count</div>
                    <div class="text-muted">Total Templates</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <div class="display-6 text-success mb-2">@Model.StageTemplates.Count(t => t.IsDefault)</div>
                    <div class="text-muted">Default Templates</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <div class="display-6 text-info mb-2">@Model.Categories.Count</div>
                    <div class="text-muted">Categories</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <div class="display-6 text-warning mb-2">@Model.StageTemplates.Sum(t => t.UsageCount)</div>
                    <div class="text-muted">Total Usage</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Industry Filter</label>
                            <select asp-for="IndustryFilter" class="form-select">
                                <option value="">All Industries</option>
                                <option value="General">General</option>
                                <option value="Firearms">Firearms</option>
                                <option value="Aerospace">Aerospace</option>
                                <option value="Automotive">Automotive</option>
                                <option value="Medical">Medical</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Complexity Filter</label>
                            <select asp-for="ComplexityFilter" class="form-select">
                                <option value="">All Complexity Levels</option>
                                <option value="Simple">Simple</option>
                                <option value="Medium">Medium</option>
                                <option value="Complex">Complex</option>
                                <option value="VeryComplex">Very Complex</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary me-2">
                                <i class="fas fa-filter me-1"></i>Filter
                            </button>
                            <a href="@Url.Page(null)" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Templates Grid -->
    <div class="row">
        @foreach (var template in Model.StageTemplates)
        {
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">@template.Name</h6>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i>Edit</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-copy me-2"></i>Duplicate</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-page-handler="DeleteTemplate" class="d-inline">
                                        <input type="hidden" name="templateId" value="@template.Id" />
                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure you want to delete this template?')">
                                            <i class="fas fa-trash me-2"></i>Delete
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted small">@template.Description</p>
                        
                        <div class="mb-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <span class="badge @Model.GetIndustryBadgeClass(template.Industry)">@template.Industry</span>
                                </div>
                                <div class="col-6">
                                    <span class="badge @Model.GetComplexityBadgeClass(template.ComplexityLevel)">@template.ComplexityLevel</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>@template.EstimatedTotalHours.ToString("F1")h
                                <span class="ms-3">
                                    <i class="fas fa-dollar-sign me-1"></i>@template.EstimatedTotalCost.ToString("C")
                                </span>
                            </small>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-layer-group me-1"></i>@template.TemplateSteps.Count stage(s)
                                @if (template.UsageCount > 0)
                                {
                                    <span class="ms-3">
                                        <i class="fas fa-chart-line me-1"></i>Used @template.UsageCount time(s)
                                    </span>
                                }
                            </small>
                        </div>

                        @if (template.IsDefault)
                        {
                            <div class="mb-2">
                                <span class="badge bg-success">
                                    <i class="fas fa-star me-1"></i>Default Template
                                </span>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Preview
                            </button>
                            <button type="button" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-play me-1"></i>Apply
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.StageTemplates.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No templates found</h5>
            <p class="text-muted">Create your first stage template to get started.</p>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTemplateModal">
                <i class="fas fa-plus me-2"></i>Create Template
            </button>
        </div>
    }
</div>

<!-- Create Template Modal -->
<div class="modal fade" id="createTemplateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateTemplate">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus me-2"></i>Create Stage Template
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="NewTemplate.Name" class="form-label">Template Name</label>
                            <input asp-for="NewTemplate.Name" class="form-control" required />
                            <span asp-validation-for="NewTemplate.Name" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="NewTemplate.Description" class="form-label">Description</label>
                            <textarea asp-for="NewTemplate.Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="NewTemplate.Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewTemplate.Industry" class="form-label">Industry</label>
                            <select asp-for="NewTemplate.Industry" class="form-select" required>
                                <option value="">Select Industry</option>
                                <option value="General">General</option>
                                <option value="Firearms">Firearms</option>
                                <option value="Aerospace">Aerospace</option>
                                <option value="Automotive">Automotive</option>
                                <option value="Medical">Medical</option>
                            </select>
                            <span asp-validation-for="NewTemplate.Industry" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewTemplate.MaterialType" class="form-label">Material Type</label>
                            <select asp-for="NewTemplate.MaterialType" class="form-select" required>
                                <option value="">Select Material</option>
                                <option value="Metal">Metal</option>
                                <option value="Titanium">Titanium</option>
                                <option value="Steel">Steel</option>
                                <option value="Aluminum">Aluminum</option>
                                <option value="Inconel">Inconel</option>
                                <option value="Polymer">Polymer</option>
                            </select>
                            <span asp-validation-for="NewTemplate.MaterialType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewTemplate.ComplexityLevel" class="form-label">Complexity Level</label>
                            <select asp-for="NewTemplate.ComplexityLevel" class="form-select" required>
                                <option value="">Select Complexity</option>
                                <option value="Simple">Simple</option>
                                <option value="Medium">Medium</option>
                                <option value="Complex">Complex</option>
                                <option value="VeryComplex">Very Complex</option>
                            </select>
                            <span asp-validation-for="NewTemplate.ComplexityLevel" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewTemplate.SortOrder" class="form-label">Sort Order</label>
                            <input asp-for="NewTemplate.SortOrder" type="number" class="form-control" min="1" max="999" />
                            <span asp-validation-for="NewTemplate.SortOrder" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="NewTemplate.IsDefault" class="form-check-input" type="checkbox" />
                                <label asp-for="NewTemplate.IsDefault" class="form-check-label">
                                    Set as default template for this industry/complexity combination
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create Template
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}