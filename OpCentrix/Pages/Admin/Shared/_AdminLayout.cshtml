                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 11.172V5l-1-1z"></path>
                            </svg>
                        </div>
                        <span class="font-medium">Machines</span>
                        <span class="ml-auto bg-blue-100 text-blue-700 text-xs px-2 py-1 rounded-full">NEW</span>
                    </a>
                    
                    <!-- Operating Shifts -->
                    <a href="/Admin/Shifts" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200 @(currentPage == "Admin/Shifts" ? "nav-item-active" : "")">
                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <span class="font-medium">Operating Shifts</span>
                        <span class="ml-auto bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full">NEW</span>
                    </a>
                    
                    <!-- Analytics Section -->
                    <p class="text-xs font-medium text-gray-500 mb-3 mt-4">ANALYTICS & REPORTS</p>
                    <div class="space-y-2">
                        <!-- Analytics -->
                        <a href="/Admin/Analytics" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200 @(currentPage == "Admin/Analytics" ? "nav-item-active" : "")">
                            <div class="w-5 h-5 mr-3">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                            </div>
                            <span class="font-medium">Analytics</span>
                        </a>
                        
                        <!-- System Logs -->
                        <a href="/Admin/Logs" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200 @(currentPage == "Admin/Logs" ? "nav-item-active" : "")">
                            <div class="w-5 h-5 mr-3">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </div>
                            <span class="font-medium">System Logs</span>
                        </a>
                    </div>
                    
                    <!-- Database Section -->
                    <p class="text-xs font-medium text-gray-500 mb-3">DATABASE MANAGEMENT</p>
                    <div class="space-y-2">
                        <!-- Database Export/Import -->
                        <a href="/Admin/Database" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200 @(currentPage == "Admin/Database" ? "nav-item-active" : "")">
                            <div class="w-5 h-5 mr-3">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                                </svg>
                            </div>
                            <span class="font-medium">Database</span>
                            <span class="ml-auto bg-red-100 text-red-700 text-xs px-2 py-1 rounded-full">NEW</span>
                        </a>
                    </div>
                </div>
                
                <!-- SLS Metal Printing Mini Scheduler Section -->
                <div class="mt-6 mb-6">
                    <p class="text-xs font-medium text-gray-500 mb-3">SLS METAL PRINTING</p>
                    <div class="bg-gray-50 rounded-lg border border-gray-200 overflow-hidden">
                        <div class="bg-indigo-50 px-3 py-2 border-b border-gray-200 flex justify-between items-center">
                            <h3 class="text-xs font-medium text-indigo-800">Production Schedule</h3>
                            <a href="/Scheduler" class="text-xs text-indigo-600 hover:text-indigo-800">Full View</a>
                        </div>
                        <div class="px-2 py-2">
                            <div id="admin-mini-scheduler" hx-get="/Scheduler?handler=EmbeddedView" hx-trigger="load" hx-swap="outerHTML">
                                <!-- Loading placeholder -->
                                <div class="p-2 text-center">
                                    <svg class="animate-spin h-4 w-4 text-indigo-600 mx-auto mb-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <p class="text-xs text-gray-500">Loading schedule...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Operations Section -->
                <p class="text-xs font-medium text-gray-500 mb-3">OPERATIONS</p>
                <div class="space-y-2">
                    <!-- Scheduler -->
                    <a href="/Scheduler" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200">
                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <span class="font-medium">Scheduler</span>
                    </a>
                    
                    <!-- Coating -->
                    <a href="/Coating" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200">
                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17v4a2 2 0 002 2h4"></path>
                            </svg>
                        </div>
                        <span class="font-medium">Coating</span>
                    </a>
                    
                    <!-- 3D Printing -->
                    <a href="/Printing" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200">
                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                            </svg>
                        </div>
                        <span class="font-medium">SLS Metal Printing</span>
                        <span class="ml-auto bg-blue-100 text-blue-700 text-xs px-2 py-1 rounded-full">NEW</span>
                    </a>
                </div>
                
                <!-- Divider -->
                <div class="border-t border-gray-200 my-6"></div>
                
                <!-- User Actions -->
                <div class="space-y-2">
                    <a href="/Account/Settings" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-xl transition-all duration-200">
                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <span class="font-medium">Settings</span>
                    </a>
                    
                    <button onclick="performLogout()" class="nav-item flex items-center px-4 py-3 text-red-600 rounded-xl transition-all duration-200 hover:bg-red-50 w-full text-left">
                        <div class="w-5 h-5 mr-3">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                        </div>
                        <span class="font-medium">Logout</span>
                    </button>
                </div>
            </nav>
            
            <!-- Footer -->
            <div class="p-4 border-t border-gray-200">
                <p class="text-xs text-gray-500 text-center">OpCentrix v2.0</p>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col min-h-screen">
            <!-- Enhanced Top Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="px-6 py-4">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-4">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
                                <p class="text-gray-600 text-sm mt-1">@ViewData["Description"]</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-6">
                            <!-- Quick Stats -->
                            <div class="hidden lg:flex items-center space-x-6 text-sm">
                                <div class="text-center">
                                    <p class="text-gray-500">System</p>
                                    <p class="font-semibold text-green-600">Online</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-gray-500">Today</p>
                                    <p class="font-semibold text-gray-900">@DateTime.Now.ToString("MMM dd")</p>
                                </div>
                            </div>
                            
                            <!-- User Avatar -->
                            <div class="flex items-center space-x-3">
                                <div class="text-right hidden sm:block">
                                    <p class="text-sm font-medium text-gray-900">@userName</p>
                                    <p class="text-xs text-gray-500">@userRole Administrator</p>
                                </div>
                                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
                                    <span class="text-white font-semibold text-sm">@(userName.FirstOrDefault())</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 p-6 bg-gray-50">
                <div class="max-w-7xl mx-auto">
                    @RenderBody()
                </div>
            </main>
            
            <!-- Footer -->
            <footer class="bg-white border-t border-gray-200 px-6 py-4">
                <div class="flex justify-between items-center text-sm text-gray-500">
                    <p>&copy; @DateTime.Now.Year OpCentrix. All rights reserved.</p>
                    <p>Admin Panel v2.0 • Last updated: @DateTime.Now.ToString("MM/dd/yyyy HH:mm")</p>
                </div>
            </footer>
        </div>
    </div>

    <!-- Enhanced Modal Container -->
    <div id="modal-container" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 backdrop-blur-sm">
        <div class="modal-content bg-white rounded-2xl shadow-2xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
            <!-- Modal content will be inserted here -->
        </div>
    </div>
    
    <!-- Modal container for job editing -->
    <div id="modal-content" class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50 backdrop-blur-sm"></div>

    <!-- Enhanced Notification Container -->
    <div id="notification-container" class="fixed top-6 right-6 z-50 space-y-3 max-w-sm"></div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-white bg-opacity-75 flex items-center justify-center z-40 hidden">
        <div class="flex items-center space-x-3">
            <svg class="animate-spin h-8 w-8 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-gray-700 font-medium">Loading...</span>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Enhanced notification system
        window.showNotification = function(message, type = 'info', duration = 4000) {
            const container = document.getElementById('notification-container');
            const notification = document.createElement('div');
            
            const config = {
                success: { bg: 'bg-green-500', icon: '?' },
                error: { bg: 'bg-red-500', icon: '?' },
                warning: { bg: 'bg-yellow-500', icon: '?' },
                info: { bg: 'bg-blue-500', icon: '?' }
            };
            
            const typeConfig = config[type] || config.info;
            
            notification.className = `${typeConfig.bg} text-white px-6 py-4 rounded-xl shadow-lg transform transition-all duration-300 translate-x-full opacity-0 flex items-center space-x-3`;
            notification.innerHTML = `
                <span class="font-bold text-lg">${typeConfig.icon}</span>
                <span class="flex-1">${message}</span>
                <button onclick="this.parentElement.remove()" class="text-white hover:text-gray-200 ml-4">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            `;
            
            container.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.classList.remove('translate-x-full', 'opacity-0');
            }, 10);
            
            // Auto remove
            if (duration > 0) {
                setTimeout(() => {
                    notification.classList.add('translate-x-full', 'opacity-0');
                    setTimeout(() => notification.remove(), 300);
                }, duration);
            }
        };

        // Enhanced modal functions
        window.showModal = function(content) {
            const container = document.getElementById('modal-container');
            const modalContent = container.querySelector('div');
            modalContent.innerHTML = content;
            container.classList.remove('hidden');
            container.classList.add('flex');
            document.body.style.overflow = 'hidden';
        };

        window.hideModal = function() {
            const container = document.getElementById('modal-container');
            container.classList.add('hidden');
            container.classList.remove('flex');
            document.body.style.overflow = 'auto';
        };
        
        // Job modal functions
        window.showJobModal = function() {
            const modal = document.getElementById('modal-content');
            if (modal) {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                document.body.style.overflow = 'hidden';
            }
        };

        window.closeJobModal = function() {
            const modal = document.getElementById('modal-content');
            if (modal) {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
                modal.innerHTML = '';
                document.body.style.overflow = '';
            }
        };
        
        // Job modal opener for scheduler
        window.openJobModal = function(machineId, date, jobId = null) {
            const params = new URLSearchParams({
                handler: 'ShowAddModal',
                machineId: machineId,
                date: date
            });
            if (jobId) params.append('id', jobId);
            
            htmx.ajax('GET', `/Scheduler?${params.toString()}`, {
                target: '#modal-content',
                swap: 'innerHTML'
            });
        };

        // Loading overlay functions
        window.showLoading = function() {
            document.getElementById('loading-overlay').classList.remove('hidden');
        };

        window.hideLoading = function() {
            document.getElementById('loading-overlay').classList.add('hidden');
        };

        // Enhanced logout function with confirmation
        window.performLogout = function() {
            console.log('?? Admin logout requested by user');
            
            // Show confirmation dialog
            if (confirm('Are you sure you want to logout?\n\nThis will end your current session and you will need to login again.')) {
                console.log('?? Admin logout confirmed - redirecting to logout page');
                
                // Clear any local storage data
                try {
                    localStorage.removeItem('sessionTimeoutMinutes');
                    localStorage.removeItem('edmLogs');
                    localStorage.removeItem('edmLogNumber');
                    console.log('?? Local storage cleared');
                } catch (error) {
                    console.warn('?? Could not clear local storage:', error);
                }
                
                // Redirect to logout page
                window.location.href = '/Account/Logout';
            } else {
                console.log('?? Admin logout cancelled by user');
            }
        };

        // Global event listeners
        document.getElementById('modal-container').addEventListener('click', function(e) {
            if (e.target === this) hideModal();
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                hideModal();
                closeJobModal();
            }
        });
        
        // Job modal background click handling
        document.addEventListener('click', function(e) {
            const modal = document.getElementById('modal-content');
            if (modal && e.target === modal && modal.classList.contains('flex')) {
                closeJobModal();
            }
        });

        // HTMX event listeners for loading states and job modal
        document.body.addEventListener('htmx:beforeRequest', function(e) {
            if (!e.detail.target.id.includes('scheduler')) {
                showLoading();
            }
        });

        document.body.addEventListener('htmx:afterRequest', function(e) {
            if (!e.detail.target.id.includes('scheduler')) {
                hideLoading();
            }
        });
        
        document.body.addEventListener('htmx:afterSwap', function (e) {
            if (e.detail.target.id === "modal-content") {
                const container = document.getElementById("modal-content");
                if (container.innerHTML.trim() === "") {
                    closeJobModal();
                } else {
                    showJobModal();
                }
            }
        });
    </script>
