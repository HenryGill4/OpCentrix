                    <a href="/Admin/Logs" class="nav-item group flex items-center px-3 py-2 text-sm font-medium rounded-lg @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Logs" ? "nav-item-active" : "text-gray-700 hover:text-gray-900 hover:bg-gray-100")">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2v14a2 2 0 01-2 2z"></path>
                        </svg>
                        System Logs
                    </a>
                </div>
            </nav>
            
            <!-- Footer -->
            <div class="p-4 border-t border-gray-200">
                <button onclick="window.location.href='/'" class="w-full bg-blue-50 hover:bg-blue-100 text-blue-600 rounded-lg py-2 px-4 text-sm font-medium transition-colors">
                    Return to Main App
                </button>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="md:ml-64 flex-1 flex flex-col overflow-hidden">
            <!-- Top Header -->
            <header class="bg-white shadow-sm border-b border-gray-200 flex-shrink-0">
                <div class="flex justify-between items-center px-4 py-3">
                    <!-- Mobile menu button -->
                    <button type="button" class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 focus:outline-none" onclick="toggleSidebar()">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                    
                    <!-- Page title -->
                    <div class="flex-1 min-w-0">
                        <h1 class="text-xl font-semibold text-gray-900 truncate">
                            @ViewData["Title"]
                        </h1>
                    </div>
                    
                    <!-- User menu -->
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-500">@(User.Identity?.Name ?? "Administrator")</span>
                        <button onclick="window.location.href='/Account/Logout'" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">
                            Logout
                        </button>
                    </div>
                </div>
            </header>

            <!-- Main content -->
            <main class="flex-1 overflow-auto bg-gray-50">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('-translate-x-full');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>