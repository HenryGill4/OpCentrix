<script>
// Material update function
window.updateSlsMaterial = function() {
    const materialSelect = document.getElementById('materialSelect');
    const slsMaterialInput = document.getElementById('slsMaterialInput');
    
    if (materialSelect && slsMaterialInput) {
        slsMaterialInput.value = materialSelect.value;
    }
};

// Volume calculation function
window.calculateVolume = function() {
    const length = parseFloat(document.getElementById('Part_LengthMm')?.value) || 0;
    const width = parseFloat(document.getElementById('Part_WidthMm')?.value) || 0;
    const height = parseFloat(document.getElementById('Part_HeightMm')?.value) || 0;
    
    const volume = length * width * height;
    const volumeInput = document.getElementById('volumeInput');
    const dimensionsInput = document.getElementById('dimensionsInput');
    
    if (volumeInput) {
        volumeInput.value = volume.toFixed(0);
    }
    
    if (dimensionsInput && (length > 0 || width > 0 || height > 0)) {
        dimensionsInput.value = `${length} × ${width} × ${height} mm`;
    }
};

// Form response handler
function handleFormResponse(event) {
    const xhr = event.detail.xhr;
    
    if (xhr.status === 200) {
        // Success - form was processed
        const response = xhr.responseText;
        
        // Check if response contains HX-Redirect header
        const redirectHeader = xhr.getResponseHeader('HX-Redirect');
        if (redirectHeader) {
            window.location.href = redirectHeader;
            return;
        }
        
        // Check if response contains success indicators
        if (response.includes('success') || response.includes('created') || response.includes('updated')) {
            // Close modal and refresh page
            const modal = bootstrap.Modal.getInstance(document.querySelector('.modal'));
            if (modal) {
                modal.hide();
            }
            setTimeout(() => {
                window.location.reload();
            }, 500);
        } else {
            // Form validation errors - update modal content
            document.getElementById('partModalContent').innerHTML = response;
        }
    } else {
        // Error occurred
        console.error('Form submission error:', xhr.status, xhr.statusText);
        alert('An error occurred while saving the part. Please try again.');
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    // Auto-calculate volume on existing values
    if (typeof window.calculateVolume === 'function') {
        window.calculateVolume();
    }
    
    // Auto-set SLS material on existing values
    if (typeof window.updateSlsMaterial === 'function') {
        window.updateSlsMaterial();
    }

    // Initialize asset drag and drop if on assets tab
    initializeAssetManagement();
});

// Asset Management Functions
function initializeAssetManagement() {
    const dropzone = document.getElementById('asset-dropzone');
    const fileInput = document.getElementById('asset-file-input');
    
    if (!dropzone || !fileInput) return;

    // Click to browse
    dropzone.addEventListener('click', () => fileInput.click());
    
    // Drag and drop events
    dropzone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropzone.classList.add('border-primary', 'bg-light');
    });
    
    dropzone.addEventListener('dragleave', () => {
        dropzone.classList.remove('border-primary', 'bg-light');
    });
    
    dropzone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropzone.classList.remove('border-primary', 'bg-light');
        
        const files = Array.from(e.dataTransfer.files);
        handleAssetFiles(files);
    });
    
    // File input change
    fileInput.addEventListener('change', (e) => {
        const files = Array.from(e.target.files);
        handleAssetFiles(files);
    });
}

function handleAssetFiles(files) {
    console.log('Handling asset files:', files.map(f => f.name));
    
    // Validate and upload files
    files.forEach(file => {
        if (validateAssetFile(file)) {
            uploadAssetFile(file);
        }
    });
}

function validateAssetFile(file) {
    const allowedTypes = {
        '3DModel': ['.step', '.stp', '.stl'],
        'Photo': ['.jpg', '.jpeg', '.png'],
        'Document': ['.pdf']
    };
    
    const extension = '.' + file.name.split('.').pop().toLowerCase();
    const isValidType = Object.values(allowedTypes).some(types => types.includes(extension));
    
    if (!isValidType) {
        alert(`File type not supported: ${extension}`);
        return false;
    }
    
    if (file.size > 50 * 1024 * 1024) { // 50MB limit
        alert(`File too large: ${file.name}. Maximum size is 50MB.`);
        return false;
    }
    
    return true;
}

function uploadAssetFile(file) {
    // This would integrate with the asset upload functionality
    console.log('Uploading asset file:', file.name);
    // Implementation would call the Parts page asset upload method
}
