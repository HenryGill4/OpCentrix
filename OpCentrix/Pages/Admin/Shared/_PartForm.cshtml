        <i class="fas fa-save me-1"></i>
        <span class="btn-text">@(Model.Part.Id == 0 ? "Create Part" : "Update Part")</span>
        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
