<script>
    console.log('?? [PART-FORM] Loading enhanced dynamic parts form');
    
    // Initialize enhanced part form
    document.addEventListener('DOMContentLoaded', function() {
        console.log('?? [PART-FORM] Initializing enhanced part form with stage management');
        
        // Setup event listeners for stage-aware totals updating
        setupStageAwareTotalsUpdating();
        
        // Initialize material auto-fill
        setupMaterialAutoFill();
        
        // Setup volume calculation
        setupVolumeCalculation();
        
        // Setup admin override validation
        setupAdminOverrideValidation();
        
        console.log('? [PART-FORM] Enhanced part form initialized');
    });
    
    // Setup stage-aware totals updating
    function setupStageAwareTotalsUpdating() {
        // Listen for stage changes from the stage manager component
        document.addEventListener('stageConfigurationChanged', function(event) {
            const stageData = event.detail;
            console.log('?? [PART-FORM] Stage configuration changed, updating totals', stageData);
            
            updateTotalsSummary(stageData);
            updateAdminCalculatedValues(stageData);
            updateDynamicStageTabs(stageData);
        });
    }
    
    // Update totals summary in the Summary tab
    function updateTotalsSummary(stagesData) {
        try {
            const totalStagesEl = document.getElementById('summary-total-stages');
            const totalDurationEl = document.getElementById('summary-total-duration');
            const totalCostEl = document.getElementById('summary-total-cost');
            const complexityEl = document.getElementById('summary-complexity');
            
            if (!stagesData || stagesData.size === 0) {
                if (totalStagesEl) totalStagesEl.textContent = '0';
                if (totalDurationEl) totalDurationEl.textContent = '0.0h';
                if (totalCostEl) totalCostEl.textContent = '$0.00';
                if (complexityEl) complexityEl.textContent = 'Simple';
                
                updateStageBreakdownTable([]);
                return;
            }
            
            // Get calculated values from window global data
            const stageData = window.selectedStageData;
            if (stageData) {
                if (totalStagesEl) totalStagesEl.textContent = stageData.stages.size;
                if (totalDurationEl) totalDurationEl.textContent = `${stageData.totalDuration.toFixed(1)}h`;
                if (totalCostEl) totalCostEl.textContent = `$${stageData.totalCost.toFixed(2)}`;
                if (complexityEl) {
                    complexityEl.textContent = stageData.complexityLevel;
                    complexityEl.className = complexityEl.className.replace(/bg-\w+/, getComplexityColorClass(stageData.complexityLevel));
                }
                
                // Update breakdown table
                const sortedStages = Array.from(stageData.stages.entries())
                    .sort(([, a], [, b]) => a.executionOrder - b.executionOrder);
                updateStageBreakdownTable(sortedStages);
            }
            
            console.log('? [PART-FORM] Updated totals summary');
        } catch (error) {
            console.error('? [PART-FORM] Error updating totals summary:', error);
        }
    }

    // Update admin override calculated values
    function updateAdminCalculatedValues(stagesData) {
        try {
            const calculatedDurationEl = document.getElementById('calculated-duration');
            const calculatedCostEl = document.getElementById('calculated-cost');
            const stageConfigurationEl = document.getElementById('stage-configuration');
            
            const stageData = window.selectedStageData;
            if (stageData && stagesData.size > 0) {
                if (calculatedDurationEl) {
                    calculatedDurationEl.textContent = `${stageData.totalDuration.toFixed(1)} hours`;
                }
                if (calculatedCostEl) {
                    calculatedCostEl.textContent = `$${stageData.totalCost.toFixed(2)}`;
                }
                if (stageConfigurationEl) {
                    const stageNames = Array.from(stageData.stages.values()).map(s => s.name).join(', ');
                    stageConfigurationEl.textContent = `${stageData.stages.size} stages: ${stageNames}`;
                }
            } else {
                if (calculatedDurationEl) calculatedDurationEl.textContent = '0.0 hours';
                if (calculatedCostEl) calculatedCostEl.textContent = '$0.00';
                if (stageConfigurationEl) stageConfigurationEl.textContent = 'No stages configured';
            }
            
            console.log('? [PART-FORM] Updated admin calculated values');
        } catch (error) {
            console.error('? [PART-FORM] Error updating admin values:', error);
        }
    }

    // Update stage breakdown table
    function updateStageBreakdownTable(sortedStages) {
        try {
            const tableContainer = document.getElementById('stage-breakdown-table');
            if (!tableContainer) return;
            
            if (sortedStages.length === 0) {
                tableContainer.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-info-circle fa-2x mb-2"></i>
                        <p>No stages selected yet.</p>
                        <p class="small">Go to the Manufacturing Stages tab to configure stages for this part.</p>
                    </div>
                `;
                return;
            }
            
            const availableStages = window.availableStages || [];
            
            const tableHtml = `
                <table class="table table-sm">
                    <thead class="table-light">
                        <tr>
                            <th width="60">Order</th>
                            <th>Stage</th>
                            <th width="100">Duration</th>
                            <th width="100">Setup</th>
                            <th width="120">Est. Cost</th>
                            <th width="120">Machine</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${sortedStages.map(([stageId, stageData]) => {
                            const stage = availableStages.find(s => s.id === parseInt(stageId));
                            const hourlyRate = stageData.hourlyRateOverride || stage?.defaultHourlyRate || 85;
                            const setupCost = (stageData.setupTimeMinutes / 60) * hourlyRate;
                            const laborCost = stageData.estimatedHours * hourlyRate;
                            const totalStageCost = setupCost + laborCost + stageData.materialCost;
                            
                            return `
                                <tr>
                                    <td>
                                        <span class="badge" style="background-color: ${stage?.stageColor || '#007bff'};">
                                            ${stageData.executionOrder}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="${stage?.stageIcon || 'fas fa-cogs'} me-2" style="color: ${stage?.stageColor || '#007bff'};"></i>
                                            <strong>${stageData.name}</strong>
                                        </div>
                                        ${stage?.department ? `<div class="small text-muted">${stage.department}</div>` : ''}
                                    </td>
                                    <td class="text-center">
                                        <strong>${stageData.estimatedHours}h</strong>
                                    </td>
                                    <td class="text-center">
                                        ${stageData.setupTimeMinutes} min
                                    </td>
                                    <td class="text-end">
                                        <strong>$${totalStageCost.toFixed(2)}</strong>
                                        <div class="small text-muted">$${hourlyRate.toFixed(2)}/hr</div>
                                    </td>
                                    <td>
                                        ${stageData.assignedMachineId ? 
                                            `<span class="text-success">${stageData.assignedMachineId}</span>` :
                                            '<span class="text-muted">Any</span>'
                                        }
                                    </td>
                                </tr>
                            `;
                        }).join('')}
                    </tbody>
                </table>
            `;
            
            tableContainer.innerHTML = tableHtml;
            console.log('? [PART-FORM] Updated stage breakdown table');
        } catch (error) {
            console.error('? [PART-FORM] Error updating breakdown table:', error);
        }
    }

    // Get complexity color class
    function getComplexityColorClass(complexityLevel) {
        switch (complexityLevel) {
            case 'Simple': return 'bg-success';
            case 'Medium': return 'bg-info';
            case 'Complex': return 'bg-warning';
            case 'Very Complex': return 'bg-danger';
            default: return 'bg-secondary';
        }
    }

    // Initialize material auto-fill
    function setupMaterialAutoFill() {
        const materialSelect = document.getElementById('materialSelect');
        if (materialSelect) {
            materialSelect.addEventListener('change', function() {
                window.updateSlsMaterial && window.updateSlsMaterial();
            });
        }
    }

    // Setup volume calculation
    function setupVolumeCalculation() {
        const lengthInput = document.querySelector('input[name="LengthMm"]');
        const widthInput = document.querySelector('input[name="WidthMm"]');
        const heightInput = document.querySelector('input[name="HeightMm"]');
        
        if (lengthInput && widthInput && heightInput) {
            [lengthInput, widthInput, heightInput].forEach(input => {
                input.addEventListener('change', window.calculateVolume);
            });
        }
    }

    // Setup admin override validation
    function setupAdminOverrideValidation() {
        const overrideInput = document.getElementById('adminOverrideInput');
        const reasonTextarea = document.getElementById('overrideReasonText');
        
        if (overrideInput && reasonTextarea) {
            overrideInput.addEventListener('input', function() {
                const hasOverride = parseFloat(this.value) > 0;
                reasonTextarea.required = hasOverride;
                
                if (hasOverride) {
                    reasonTextarea.closest('.mb-3').classList.add('required');
                } else {
                    reasonTextarea.closest('.mb-3').classList.remove('required');
                }
            });
        }
    }

    // Material auto-update function (enhanced)
    window.updateSlsMaterial = function() {
        const materialSelect = document.getElementById('materialSelect');
        const slsMaterialInput = document.getElementById('slsMaterialInput');
        
        if (materialSelect && slsMaterialInput) {
            slsMaterialInput.value = materialSelect.value;
            updateMaterialDefaults(materialSelect.value);
        }
    };

    // Enhanced material defaults
    window.updateMaterialDefaults = function(materialType) {
        const materialDefaults = {
            'Inconel 718': { 
                laserPower: 285, 
                materialCost: 750.00, 
                estimatedHours: 12.0,
                scanSpeed: 960,
                buildTemperature: 80
            },
            'Ti-6Al-4V Grade 5': { 
                laserPower: 200, 
                materialCost: 450.00, 
                estimatedHours: 8.0,
                scanSpeed: 1200,
                buildTemperature: 180
            },
            'Ti-6Al-4V ELI Grade 23': {
                laserPower: 180,
                materialCost: 520.00,
                estimatedHours: 10.0,
                scanSpeed: 1100,
                buildTemperature: 170
            },
            '316L Stainless Steel': {
                laserPower: 190,
                materialCost: 85.00,
                estimatedHours: 6.0,
                scanSpeed: 1300,
                buildTemperature: 80
            },
            'AlSi10Mg': {
                laserPower: 170,
                materialCost: 120.00,
                estimatedHours: 5.0,
                scanSpeed: 1400,
                buildTemperature: 180
            }
        };
        
        const defaults = materialDefaults[materialType];
        if (defaults) {
            // Update form fields with material-specific defaults
            const laserPowerInput = document.querySelector('input[name="RecommendedLaserPower"]');
            const materialCostInput = document.querySelector('input[name="MaterialCostPerKg"]');
            const estimatedHoursInput = document.querySelector('input[name="EstimatedHours"]');
            const scanSpeedInput = document.querySelector('input[name="RecommendedScanSpeed"]');
            const buildTempInput = document.querySelector('input[name="RecommendedBuildTemperature"]');
            
            if (laserPowerInput) laserPowerInput.value = defaults.laserPower;
            if (materialCostInput) materialCostInput.value = defaults.materialCost.toFixed(2);
            if (estimatedHoursInput) {
                estimatedHoursInput.value = defaults.estimatedHours.toFixed(1);
                // Trigger duration display update
                window.updateDurationDisplay && window.updateDurationDisplay();
            }
            if (scanSpeedInput) scanSpeedInput.value = defaults.scanSpeed;
            if (buildTempInput) buildTempInput.value = defaults.buildTemperature;
            
            console.log(`? [MATERIAL] Updated defaults for ${materialType}`);
        }
    };

    // Volume calculation function
    window.calculateVolume = function() {
        const lengthInput = document.querySelector('input[name="LengthMm"]');
        const widthInput = document.querySelector('input[name="WidthMm"]');
        const heightInput = document.querySelector('input[name="HeightMm"]');
        const volumeInput = document.getElementById('volumeInput');
        const dimensionsInput = document.getElementById('dimensionsInput');
        
        if (lengthInput && widthInput && heightInput && volumeInput && dimensionsInput) {
            const length = parseFloat(lengthInput.value) || 0;
            const width = parseFloat(widthInput.value) || 0;
            const height = parseFloat(heightInput.value) || 0;
            
            if (length > 0 && width > 0 && height > 0) {
                const volume = length * width * height;
                volumeInput.value = Math.round(volume);
                dimensionsInput.value = `${length} × ${width} × ${height} mm`;
            } else {
                volumeInput.value = '';
                dimensionsInput.value = '';
            }
        }
    };

    // Duration display update
    window.updateDurationDisplay = function() {
        const hoursInput = document.querySelector('input[name="EstimatedHours"]');
        const overrideInput = document.getElementById('adminOverrideInput');
        const durationDisplay = document.getElementById('durationDisplay');
        const durationDays = document.getElementById('durationDays');
        
        const hours = parseFloat(overrideInput?.value || hoursInput?.value) || 0;
        
        if (hours > 0 && durationDisplay) {
            const days = Math.floor(hours / 24);
            const remainingHours = hours % 24;
            
            durationDisplay.value = days > 0 ? 
                `${days}d ${remainingHours.toFixed(1)}h` : 
                `${hours.toFixed(1)}h`;
        }
        
        if (durationDays) {
            durationDays.value = Math.ceil(hours / 8); // Work days
        }
    };
</script>

