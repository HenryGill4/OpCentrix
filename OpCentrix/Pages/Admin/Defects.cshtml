@page "/Admin/Defects"
@model OpCentrix.Pages.Admin.DefectsModel
@{
    ViewData["Title"] = "Defect Categories";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <div class="admin-header">
        <div class="admin-header-content">
            <div class="admin-header-title">
                <h1>Defect Categories</h1>
                <p>Manage defect categories for quality control and inspection processes</p>
            </div>
            <div class="admin-header-actions">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDefectCategoryModal">
                    Add Category
                </button>
            </div>
        </div>
    </div>

    <div class="admin-stats">
        <div class="admin-stat-card">
            <div class="admin-stat-content">
                <div class="admin-stat-value">@(Model.DefectStatistics.GetValueOrDefault("TotalCategories", 0))</div>
                <div class="admin-stat-label">Total Categories</div>
            </div>
        </div>
        
        <div class="admin-stat-card">
            <div class="admin-stat-content">
                <div class="admin-stat-value">@(Model.DefectStatistics.GetValueOrDefault("ActiveCategories", 0))</div>
                <div class="admin-stat-label">Active Categories</div>
            </div>
        </div>
        
        <div class="admin-stat-card">
            <div class="admin-stat-content">
                <div class="admin-stat-value">@(Model.DefectStatistics.GetValueOrDefault("CriticalDefects", 0))</div>
                <div class="admin-stat-label">Critical Defects</div>
            </div>
        </div>
    </div>

    <div class="admin-table-container">
        <div class="table-responsive">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th>Group</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Severity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DefectCategories.Any())
                    {
                        @foreach (var category in Model.DefectCategories)
                        {
                            <tr>
                                <td>@category.CategoryGroup</td>
                                <td>@category.Name</td>
                                <td>@category.Code</td>
                                <td>@category.SeverityText</td>
                                <td>@(category.IsActive ? "Active" : "Inactive")</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-primary">Edit</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No defect categories found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createDefectCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateDefectCategory">
                <div class="modal-header">
                    <h5 class="modal-title">Add Defect Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="DefectCategoryInput.Name" class="form-label">Name</label>
                        <input asp-for="DefectCategoryInput.Name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DefectCategoryInput.Code" class="form-label">Code</label>
                        <input asp-for="DefectCategoryInput.Code" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label asp-for="DefectCategoryInput.CategoryGroup" class="form-label">Category Group</label>
                        <select asp-for="DefectCategoryInput.CategoryGroup" class="form-select">
                            <option value="Surface">Surface</option>
                            <option value="Dimensional">Dimensional</option>
                            <option value="Material">Material</option>
                            <option value="Functional">Functional</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DefectCategoryInput.SeverityLevel" class="form-label">Severity Level</label>
                        <select asp-for="DefectCategoryInput.SeverityLevel" class="form-select">
                            <option value="1">1 - Critical</option>
                            <option value="2">2 - High</option>
                            <option value="3" selected>3 - Medium</option>
                            <option value="4">4 - Low</option>
                            <option value="5">5 - Minor</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>