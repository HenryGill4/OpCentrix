@page
@model OpCentrix.Pages.Shipping.IndexModel
@{
    ViewData["Title"] = "Shipping Department";
    Layout = "_OperatorLayout";
}

<div class="container-fluid py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Shipping Department</h1>
                <p class="mt-1 text-sm text-gray-600">Manage shipping and order fulfillment</p>
            </div>
            <div>
                <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium shadow-sm transition-all">
                    <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    New Shipment
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <h2 class="text-lg font-medium text-gray-900">Shipping Operations</h2>
            </div>
            
            <div class="p-6">
                <div class="alert alert-info bg-blue-50 text-blue-700 p-4 rounded-lg mb-6">
                    <h6 class="font-bold mb-2">Coming Soon!</h6>
                    <p class="mb-3">The Shipping Department module is currently under development. This area will include:</p>
                    <ul class="list-disc pl-5 space-y-1">
                        <li>Order fulfillment tracking</li>
                        <li>Packaging and labeling management</li>
                        <li>Carrier integration and tracking</li>
                        <li>Inventory management</li>
                        <li>Shipping documentation</li>
                    </ul>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
                    <div class="bg-gray-50 rounded-xl p-6 text-center">
                        <div class="w-12 h-12 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Package Management</h3>
                        <p class="text-sm text-gray-600">Track packages and shipments with real-time status updates</p>
                    </div>
                    
                    <div class="bg-gray-50 rounded-xl p-6 text-center">
                        <div class="w-12 h-12 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a2 2 0 01-2 2H9m4-2V9a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a2 2 0 002 2h4a2 2 0 002-2"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Carrier Integration</h3>
                        <p class="text-sm text-gray-600">Manage shipping carriers and rates with automatic selection</p>
                    </div>
                    
                    <div class="bg-gray-50 rounded-xl p-6 text-center">
                        <div class="w-12 h-12 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Inventory Tracking</h3>
                        <p class="text-sm text-gray-600">Monitor finished goods inventory with barcode scanning</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>