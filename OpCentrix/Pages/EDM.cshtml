                } catch (error) {
                    console.error('Error initializing log storage:', error);
                    SafeExecute.logError('INIT', 'logStorage.init', error);
                }
            },
            
            loadFromStorage: function() {
                try {
                    const stored = localStorage.getItem('edmLogs');
                    if (stored) {
                        this.logs = JSON.parse(stored);
                    }
                    
                    const logNumber = localStorage.getItem('edmLogNumber');
                    if (logNumber) {
                        this.currentLogNumber = parseInt(logNumber);
                    }
                } catch (error) {
                    console.error('Error loading EDM logs from storage:', error);
                    this.logs = [];
                    this.currentLogNumber = 1;
                }
            },
            
            saveToStorage: function() {
                try {
                    localStorage.setItem('edmLogs', JSON.stringify(this.logs));
                    localStorage.setItem('edmLogNumber', this.currentLogNumber.toString());
                } catch (error) {
                    console.error('Error saving EDM logs to storage:', error);
                }
            },
            
            addLog: function(logData) {
                try {
                    logData.id = Date.now();
                    logData.logNumber = this.currentLogNumber;
                    logData.timestamp = new Date().toISOString();
                    logData.operator = '@User.Identity?.Name';
                    
                    this.logs.unshift(logData);
                    this.currentLogNumber++;
                    
                    if (this.logs.length > 100) {
                        this.logs = this.logs.slice(0, 100);
                    }
                    
                    this.saveToStorage();
                    this.updateStats();
                    this.updateLogNumber();
                    
                    console.log('?? EDM Log stored locally:', logData);
                    return true;
                } catch (error) {
                    console.error('Error adding EDM log:', error);
                    return false;
                }
            },
            
            getStats: function() {
                try {
                    const today = new Date().toDateString();
                    const todayLogs = this.logs.filter(log => 
                        new Date(log.timestamp).toDateString() === today
                    );
                    
                    const lastLog = this.logs.length > 0 ? this.logs[0] : null;
                    
                    return {
                        total: this.logs.length,
                        today: todayLogs.length,
                        lastLogTime: lastLog ? new Date(lastLog.timestamp).toLocaleString() : 'Never'
                    };
                } catch (error) {
                    console.error('Error getting stats:', error);
                    return { total: 0, today: 0, lastLogTime: 'Error' };
                }
            },
            
            updateStats: function() {
                try {
                    const stats = this.getStats();
                    
                    const elements = {
                        totalLogsCount: stats.total,
                        todayLogsCount: stats.today,
                        lastLogTime: stats.lastLogTime,
                        logCount: stats.total
                    };
                    
                    for (const [id, value] of Object.entries(elements)) {
                        const element = document.getElementById(id);
                        if (element) {
                            element.textContent = value;
                        }
                    }
                } catch (error) {
                    console.error('Error updating stats:', error);
                }
