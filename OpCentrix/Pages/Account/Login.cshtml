@page
@model OpCentrix.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OpCentrix - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
        <!-- Logo and Title -->
        <div class="text-center mb-8">
            <div class="mx-auto w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 11.172V5l-1-1z"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-white mb-2">OpCentrix</h1>
            <p class="text-slate-400">SLS Print Job Scheduler</p>
        </div>

        <!-- Login Form -->
        <div class="bg-white rounded-2xl shadow-2xl p-8">
            <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Welcome Back</h2>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                    <div class="flex">
                        <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div class="text-sm text-red-600">@Model.ErrorMessage</div>
                    </div>
                </div>
            }

            <form method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                
                <div>
                    <label asp-for="Input.Username" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <input asp-for="Input.Username" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                           placeholder="Enter your username" />
                    <span asp-validation-for="Input.Username" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <input asp-for="Input.Password" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                           placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center">
                    <input asp-for="Input.RememberMe" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-700">Remember me</label>
                </div>

                <button type="submit" 
                        class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-[1.02] shadow-lg">
                    Sign In
                </button>
            </form>
        </div>

        <!-- Test Users Info -->
        <div class="mt-8 bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white text-xs">
            <h3 class="font-semibold mb-2">Test Users Available:</h3>
            <div class="grid grid-cols-2 gap-2 text-xs">
                <div>admin/admin123</div>
                <div>manager/manager123</div>
                <div>scheduler/scheduler123</div>
                <div>operator/operator123</div>
                <div>printer/printer123</div>
                <div>coating/coating123</div>
                <div>shipping/shipping123</div>
                <div>analyst/analyst123</div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>