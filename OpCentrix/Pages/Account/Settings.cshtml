@page
@model OpCentrix.Pages.Account.SettingsModel
@{
    ViewData["Title"] = "User Settings";
}

<div class="max-w-4xl mx-auto py-8 px-4">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">User Settings</h1>
        <p class="text-gray-600">Manage your account preferences and session settings</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <svg class="w-5 h-5 text-green-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-sm text-green-600">@Model.Message</div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="text-sm text-red-600">@Model.ErrorMessage</div>
            </div>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- User Settings -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">Profile & Preferences</h2>
            
            <form method="post" asp-page-handler="UpdateSettings" class="space-y-6">
                <!-- Personal Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
                    
                    <div>
                        <label asp-for="Settings.FullName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Settings.FullName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                        <span asp-validation-for="Settings.FullName" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Settings.Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Settings.Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                        <span asp-validation-for="Settings.Email" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <!-- Session Settings -->
                <div class="space-y-4 border-t pt-6">
                    <h3 class="text-lg font-medium text-gray-900">Session Settings</h3>
                    
                    <div>
                        <label asp-for="Settings.SessionTimeoutMinutes" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Settings.SessionTimeoutMinutes" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="30">30 minutes</option>
                            <option value="60">1 hour</option>
                            <option value="120">2 hours (default)</option>
                            <option value="180">3 hours</option>
                        </select>
                        <p class="text-sm text-gray-500 mt-1">Your session will automatically logout after this period of inactivity</p>
                        <span asp-validation-for="Settings.SessionTimeoutMinutes" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Settings.DefaultPage" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Settings.DefaultPage" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="/Scheduler">Scheduler</option>
                            <option value="/Admin">Admin Panel</option>
                            <option value="/Analytics">Analytics</option>
                            <option value="/Coating">Coating</option>
                            <option value="/Shipping">Shipping</option>
                            <option value="/EDM">EDM</option>
                        </select>
                    </div>
                </div>

                <!-- Interface Settings -->
                <div class="space-y-4 border-t pt-6">
                    <h3 class="text-lg font-medium text-gray-900">Interface Preferences</h3>
                    
                    <div>
                        <label asp-for="Settings.Theme" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Settings.Theme" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="Light">Light Theme</option>
                            <option value="Dark">Dark Theme</option>
                            <option value="Auto">Auto (System Preference)</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="Settings.ItemsPerPage" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Settings.ItemsPerPage" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="10">10 items per page</option>
                            <option value="20">20 items per page</option>
                            <option value="50">50 items per page</option>
                            <option value="100">100 items per page</option>
                        </select>
                    </div>
                </div>

                <!-- Notification Settings -->
                <div class="space-y-4 border-t pt-6">
                    <h3 class="text-lg font-medium text-gray-900">Notifications</h3>
                    
                    <div class="flex items-center">
                        <input asp-for="Settings.EmailNotifications" class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
                        <label asp-for="Settings.EmailNotifications" class="ml-2 block text-sm text-gray-700">Email Notifications</label>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="Settings.BrowserNotifications" class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
                        <label asp-for="Settings.BrowserNotifications" class="ml-2 block text-sm text-gray-700">Browser Notifications</label>
                    </div>
                </div>

                <div class="pt-6">
                    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                        Update Settings
                    </button>
                </div>
            </form>
        </div>

        <!-- Password Change -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">Change Password</h2>
            
            <form method="post" asp-page-handler="ChangePassword" class="space-y-6">
                <div>
                    <label asp-for="PasswordChange.CurrentPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="PasswordChange.CurrentPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="PasswordChange.CurrentPassword" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PasswordChange.NewPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="PasswordChange.NewPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="PasswordChange.NewPassword" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PasswordChange.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="PasswordChange.ConfirmPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                    Change Password
                </button>
            </form>

            <!-- Session Timeout Info -->
            <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                <h4 class="text-sm font-medium text-yellow-800 mb-2">Session Timeout Information</h4>
                <ul class="text-sm text-yellow-700 space-y-1">
                    <li>• Session timeout is configurable from 30 minutes to 3 hours</li>
                    <li>• Timer resets with any user activity (mouse, keyboard, clicks)</li>
                    <li>• Warning appears 5 minutes before timeout</li>
                    <li>• You can extend your session when warned</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    // Update session timeout in localStorage when changed
    document.querySelector('select[name="Settings.SessionTimeoutMinutes"]').addEventListener('change', function(e) {
        localStorage.setItem('sessionTimeoutMinutes', e.target.value);
    });
</script>