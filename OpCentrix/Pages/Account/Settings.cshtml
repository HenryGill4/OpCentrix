@page
@model OpCentrix.Pages.Account.SettingsModel
@{
    ViewData["Title"] = "User Settings";
    ViewData["Description"] = "Manage your account preferences and session settings";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<div class="space-y-6">
    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex">
                <svg class="w-5 h-5 text-green-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-sm text-green-600">@Model.Message</div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
                <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="text-sm text-red-600">@Model.ErrorMessage</div>
            </div>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- User Settings -->
        <div class="opcentrix-card p-6">
            <div class="flex items-center mb-6">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <h2 class="text-xl font-semibold text-gray-900">Profile & Preferences</h2>
            </div>
            
            <form method="post" asp-page-handler="UpdateSettings" class="space-y-6">
                <!-- Personal Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2">Personal Information</h3>
                    
                    <div>
                        <label asp-for="Settings.FullName" class="opcentrix-label opcentrix-label-required"></label>
                        <input asp-for="Settings.FullName" class="opcentrix-input" />
                        <span asp-validation-for="Settings.FullName" class="invalid-feedback"></span>
                    </div>

                    <div>
                        <label asp-for="Settings.Email" class="opcentrix-label opcentrix-label-required"></label>
                        <input asp-for="Settings.Email" class="opcentrix-input" />
                        <span asp-validation-for="Settings.Email" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Session Settings -->
                <div class="space-y-4 border-t border-gray-200 pt-6">
                    <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2">Session Settings</h3>
                    
                    <div>
                        <label asp-for="Settings.SessionTimeoutMinutes" class="opcentrix-label"></label>
                        <select asp-for="Settings.SessionTimeoutMinutes" class="opcentrix-select">
                            <option value="30">30 minutes</option>
                            <option value="60">1 hour</option>
                            <option value="120">2 hours (default)</option>
                            <option value="180">3 hours</option>
                        </select>
                        <p class="text-sm text-gray-500 mt-1">Your session will automatically logout after this period of inactivity</p>
                        <span asp-validation-for="Settings.SessionTimeoutMinutes" class="invalid-feedback"></span>
                    </div>

                    <div>
                        <label asp-for="Settings.DefaultPage" class="opcentrix-label"></label>
                        <select asp-for="Settings.DefaultPage" class="opcentrix-select">
                            <option value="/Scheduler">Job Scheduler</option>
                            <option value="/Scheduler/MasterSchedule">Master Schedule</option>
                            <option value="/PrintTracking">Print Tracking</option>
                            <option value="/Analytics">Analytics</option>
                            <option value="/EDM">EDM Processing</option>
                            <option value="/Coating">Coating & Finishing</option>
                            <option value="/Assembly">Assembly</option>
                            <option value="/Quality">Quality Control</option>
                            <option value="/Shipping">Shipping & Logistics</option>
                            <option value="/Admin">Admin Panel</option>
                        </select>
                    </div>
                </div>

                <!-- Interface Settings -->
                <div class="space-y-4 border-t border-gray-200 pt-6">
                    <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2">Interface Preferences</h3>
                    
                    <div>
                        <label asp-for="Settings.Theme" class="opcentrix-label"></label>
                        <select asp-for="Settings.Theme" class="opcentrix-select">
                            <option value="Light">?? Light Theme</option>
                            <option value="Dark">?? Dark Theme</option>
                            <option value="Auto">?? Auto (System Preference)</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="Settings.ItemsPerPage" class="opcentrix-label"></label>
                        <select asp-for="Settings.ItemsPerPage" class="opcentrix-select">
                            <option value="10">10 items per page</option>
                            <option value="20">20 items per page</option>
                            <option value="50">50 items per page</option>
                            <option value="100">100 items per page</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="Settings.TimeZone" class="opcentrix-label"></label>
                        <select asp-for="Settings.TimeZone" class="opcentrix-select">
                            <option value="UTC">UTC (Universal Time)</option>
                            <option value="America/New_York">Eastern Time (ET)</option>
                            <option value="America/Chicago">Central Time (CT)</option>
                            <option value="America/Denver">Mountain Time (MT)</option>
                            <option value="America/Los_Angeles">Pacific Time (PT)</option>
                            <option value="Europe/London">London (GMT)</option>
                            <option value="Europe/Berlin">Berlin (CET)</option>
                            <option value="Asia/Tokyo">Tokyo (JST)</option>
                        </select>
                    </div>
                </div>

                <!-- Notification Settings -->
                <div class="space-y-4 border-t border-gray-200 pt-6">
                    <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2">Notifications</h3>
                    
                    <div class="space-y-3">
                        <label class="flex items-center">
                            <input asp-for="Settings.EmailNotifications" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 mr-3" />
                            <span class="text-sm text-gray-700">?? Email Notifications</span>
                        </label>

                        <label class="flex items-center">
                            <input asp-for="Settings.BrowserNotifications" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 mr-3" />
                            <span class="text-sm text-gray-700">?? Browser Notifications</span>
                        </label>
                    </div>
                </div>

                <div class="pt-6">
                    <button type="submit" class="opcentrix-button opcentrix-button-primary w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                        </svg>
                        Update Settings
                    </button>
                </div>
            </form>
        </div>

        <!-- Password Change & Security -->
        <div class="space-y-6">
            <!-- Password Change -->
            <div class="opcentrix-card p-6">
                <div class="flex items-center mb-6">
                    <svg class="w-6 h-6 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    <h2 class="text-xl font-semibold text-gray-900">Change Password</h2>
                </div>
                
                <form method="post" asp-page-handler="ChangePassword" class="space-y-6">
                    <div>
                        <label asp-for="PasswordChange.CurrentPassword" class="opcentrix-label opcentrix-label-required"></label>
                        <input asp-for="PasswordChange.CurrentPassword" class="opcentrix-input" />
                        <span asp-validation-for="PasswordChange.CurrentPassword" class="invalid-feedback"></span>
                    </div>

                    <div>
                        <label asp-for="PasswordChange.NewPassword" class="opcentrix-label opcentrix-label-required"></label>
                        <input asp-for="PasswordChange.NewPassword" class="opcentrix-input" />
                        <span asp-validation-for="PasswordChange.NewPassword" class="invalid-feedback"></span>
                    </div>

                    <div>
                        <label asp-for="PasswordChange.ConfirmPassword" class="opcentrix-label opcentrix-label-required"></label>
                        <input asp-for="PasswordChange.ConfirmPassword" class="opcentrix-input" />
                        <span asp-validation-for="PasswordChange.ConfirmPassword" class="invalid-feedback"></span>
                    </div>

                    <button type="submit" class="opcentrix-button opcentrix-button-danger w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        Change Password
                    </button>
                </form>
            </div>

            <!-- Session Information -->
            <div class="opcentrix-card p-6 border-l-4 border-yellow-500">
                <div class="flex items-center mb-4">
                    <svg class="w-6 h-6 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-yellow-800">Session Timeout Information</h3>
                </div>
                <ul class="text-sm text-yellow-700 space-y-2">
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></span>
                        Session timeout is configurable from 30 minutes to 3 hours
                    </li>
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></span>
                        Timer resets with any user activity (mouse, keyboard, clicks)
                    </li>
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></span>
                        Warning appears 5 minutes before timeout
                    </li>
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></span>
                        You can extend your session when warned
                    </li>
                </ul>
            </div>

            <!-- Account Security Tips -->
            <div class="opcentrix-card p-6 border-l-4 border-blue-500">
                <div class="flex items-center mb-4">
                    <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-blue-800">Security Best Practices</h3>
                </div>
                <ul class="text-sm text-blue-700 space-y-2">
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
                        Use a strong password with mixed characters
                    </li>
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
                        Change your password regularly (every 90 days recommended)
                    </li>
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
                        Always logout when finished, especially on shared computers
                    </li>
                    <li class="flex items-center">
                        <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
                        Keep your session timeout reasonable for your work environment
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Update session timeout in localStorage when changed
        document.querySelector('select[name="Settings.SessionTimeoutMinutes"]').addEventListener('change', function(e) {
            localStorage.setItem('sessionTimeoutMinutes', e.target.value);
            if (window.showSuccessNotification) {
                window.showSuccessNotification('Session timeout preference updated. Save settings to apply.');
            }
        });

        // Theme change preview
        document.querySelector('select[name="Settings.Theme"]').addEventListener('change', function(e) {
            const theme = e.target.value;
            if (theme === 'Dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else if (theme === 'Light') {
                document.documentElement.removeAttribute('data-theme');
            } else if (theme === 'Auto') {
                // Use system preference
                if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                } else {
                    document.documentElement.removeAttribute('data-theme');
                }
            }
        });

        // Enhanced form validation
        document.addEventListener('DOMContentLoaded', function() {
            // Password strength indicator
            const newPasswordField = document.querySelector('input[name="PasswordChange.NewPassword"]');
            if (newPasswordField) {
                newPasswordField.addEventListener('input', function() {
                    const password = this.value;
                    let strength = 0;
                    
                    if (password.length >= 8) strength++;
                    if (/[a-z]/.test(password)) strength++;
                    if (/[A-Z]/.test(password)) strength++;
                    if (/[0-9]/.test(password)) strength++;
                    if (/[^A-Za-z0-9]/.test(password)) strength++;
                    
                    // Remove existing strength indicator
                    const existingIndicator = this.parentNode.querySelector('.password-strength');
                    if (existingIndicator) {
                        existingIndicator.remove();
                    }
                    
                    if (password.length > 0) {
                        const strengthColors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-blue-500', 'bg-green-500'];
                        const strengthTexts = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
                        
                        const indicator = document.createElement('div');
                        indicator.className = 'password-strength mt-2';
                        indicator.innerHTML = `
                            <div class="flex items-center justify-between text-xs">
                                <span class="text-gray-600">Password Strength: ${strengthTexts[strength - 1] || 'Very Weak'}</span>
                                <div class="flex space-x-1">
                                    ${Array(5).fill(0).map((_, i) => 
                                        `<div class="w-2 h-2 rounded-full ${i < strength ? strengthColors[strength - 1] : 'bg-gray-300'}"></div>`
                                    ).join('')}
                                </div>
                            </div>
                        `;
                        this.parentNode.appendChild(indicator);
                    }
                });
            }
        });
    </script>
}