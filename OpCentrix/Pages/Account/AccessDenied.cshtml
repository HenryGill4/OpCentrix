@page
@model OpCentrix.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied - OpCentrix</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-red-50 to-red-100 min-h-screen flex items-center justify-center">
    <div class="text-center">
        <!-- Error Icon -->
        <div class="mx-auto w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mb-6">
            <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m0 0v3m0-3h3m-3 0h-3m-2-5a9 9 0 1118 0 9 9 0 01-18 0z"></path>
            </svg>
        </div>

        <!-- Error Message -->
        <h1 class="text-4xl font-bold text-red-600 mb-4">Access Denied</h1>
        <p class="text-lg text-gray-700 mb-2">You don't have permission to access this resource.</p>
        <p class="text-gray-600 mb-8">Please contact your administrator if you believe this is an error.</p>

        <!-- Action Buttons -->
        <div class="space-x-4">
            <a href="javascript:history.back()" 
               class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                Go Back
            </a>
            <a href="/Account/Login" 
               class="bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                Login
            </a>
        </div>

        <!-- Help Text -->
        <div class="mt-8 text-sm text-gray-500">
            <p>If you need access to this area, please contact your system administrator.</p>
        </div>
    </div>
</body>
</html>