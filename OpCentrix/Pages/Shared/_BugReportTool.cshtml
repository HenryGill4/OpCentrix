                                <option value="General">General</option>
                                <option value="UI">?? UI/Visual</option>
                                <option value="Forms">?? Forms</option>
                                <option value="Navigation">?? Navigation</option>
                                <option value="Backend">?? Backend</option>
                                <option value="Database">??? Database</option>
                                <option value="Performance">? Performance</option>
                                <option value="Security">?? Security</option>
                                <option value="API">?? API</option>
                                <option value="Authentication">?? Authentication</option>
                                <option value="Reporting">?? Reporting</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                            Description <span class="text-red-500">*</span>
                        </label>
                        <textarea id="description" name="description" required rows="4" 
                                  placeholder="Detailed description of what went wrong..." 
                                  class="w-full border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-red-500 focus:border-red-500"></textarea>
                    </div>

                    <div>
                        <label for="stepsToReproduce" class="block text-sm font-medium text-gray-700 mb-2">Steps to Reproduce</label>
                        <textarea id="stepsToReproduce" name="stepsToReproduce" rows="3" 
                                  placeholder="1. Go to...&#10;2. Click on...&#10;3. See error..." 
                                  class="w-full border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-red-500 focus:border-red-500"></textarea>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="expectedBehavior" class="block text-sm font-medium text-gray-700 mb-2">Expected Behavior</label>
                            <textarea id="expectedBehavior" name="expectedBehavior" rows="2" 
                                      placeholder="What should have happened..." 
                                      class="w-full border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-red-500 focus:border-red-500"></textarea>
                        </div>
                        <div>
                            <label for="actualBehavior" class="block text-sm font-medium text-gray-700 mb-2">Actual Behavior</label>
                            <textarea id="actualBehavior" name="actualBehavior" rows="2" 
                                      placeholder="What actually happened..." 
                                      class="w-full border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-red-500 focus:border-red-500"></textarea>
                        </div>
                    </div>

                    <div>
                        <label for="additionalNotes" class="block text-sm font-medium text-gray-700 mb-2">Additional Notes</label>
                        <textarea id="additionalNotes" name="additionalNotes" rows="2" 
                                  placeholder="Any other relevant information..." 
                                  class="w-full border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-red-500 focus:border-red-500"></textarea>
                    </div>
                </div>

                <!-- User Information (Auto-filled, Read-only) -->
                <div class="bg-green-50 rounded-lg p-4">
                    <h4 class="text-sm font-semibold text-green-800 mb-3 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Reporter Information (Auto-detected)
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div>
                            <label class="block text-gray-600 font-medium">Reported By:</label>
                            <input type="text" id="reportedBy" name="reportedBy" value="@userName" readonly 
                                   class="w-full bg-white border-gray-300 rounded-md px-3 py-2 text-gray-700">
                        </div>
                        <div>
                            <label class="block text-gray-600 font-medium">User Role:</label>
                            <input type="text" id="userRole" name="userRole" value="@userRole" readonly 
                                   class="w-full bg-white border-gray-300 rounded-md px-3 py-2 text-gray-700">
                        </div>
                    </div>
                </div>

                <!-- Submit Section -->
                <div class="flex justify-between pt-4 border-t">
                    <button type="button" onclick="closeBugReportModal()" 
                            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
