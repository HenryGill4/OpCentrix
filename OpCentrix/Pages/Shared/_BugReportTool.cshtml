            const existingNotifications = document.querySelectorAll('.bug-report-notification');
            existingNotifications.forEach(n => n.remove());
            
            const notification = document.createElement('div');
            notification.className = `bug-report-notification fixed top-4 right-4 z-[9999] p-4 rounded-lg shadow-lg max-w-md transform transition-all duration-300 ease-in-out ${
                type === 'error' ? 'bg-red-500 text-white' : 
                type === 'warning' ? 'bg-yellow-500 text-black' : 
                'bg-green-500 text-white'
            }`;
            
            notification.innerHTML = `
