                window.SafeExecute.showNotification(type, `${title}: ${message}`);
                return;
            }
            
            // Check if there's a global notification system
            if (window.showSuccessNotification && type === 'success') {
                window.showSuccessNotification(`${title}: ${message}`);
                return;
            }
            
            if (window.showErrorNotification && type === 'error') {
                window.showErrorNotification(`${title}: ${message}`);
                return;
            }
            
            if (window.Alert && window.Alert.show) {
                window.Alert.show(message, type);
                return;
            }
            
            // Fallback: Create custom notification
            this.createFallbackNotification(type, title, message);
