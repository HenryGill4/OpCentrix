<!-- Bug Report JavaScript -->
<script>
    // Global Bug Report Functions
    window.BugReportTool = {
        // Open bug report modal
        openBugReportModal: function() {
            const modal = document.getElementById('bugReportModal');
            if (modal) {
                // Auto-fill current page context
                this.autoFillPageContext();
                this.autoFillBrowserInfo();
                this.captureCurrentPageState();
                
                modal.classList.remove('hidden');
                
                // Focus on title field
                setTimeout(() => {
                    const titleField = document.getElementById('title');
                    if (titleField) titleField.focus();
                }, 100);
            }
        },

        // Auto-fill page context information
        autoFillPageContext: function() {
            // Update operation ID if available from SafeExecute
            const operationIdField = document.getElementById('operationId');
            if (operationIdField && window.SafeExecute) {
                operationIdField.value = window.SafeExecute.generateOperationId();
            }

            // Auto-detect category based on current page
            const categorySelect = document.getElementById('category');
            const pageArea = document.getElementById('pageArea').value.toLowerCase();
            
            if (categorySelect) {
                switch (pageArea) {
                    case 'admin':
                        categorySelect.value = 'Backend';
                        break;
                    case 'scheduler':
                        categorySelect.value = 'Forms';
                        break;
                    case 'edm':
                    case 'coating':
                    case 'machining':
                        categorySelect.value = 'Forms';
                        break;
                    case 'account':
                        categorySelect.value = 'Authentication';
                        break;
                    default:
                        categorySelect.value = 'General';
                }
            }
        },

        // Auto-fill browser information
        autoFillBrowserInfo: function() {
            // Add hidden fields for browser info
            this.addHiddenField('userAgent', navigator.userAgent);
            this.addHiddenField('browserName', this.getBrowserName());
            this.addHiddenField('browserVersion', this.getBrowserVersion());
            this.addHiddenField('operatingSystem', this.getOperatingSystem());
            this.addHiddenField('screenResolution', `${screen.width}x${screen.height}`);
        },

        // Capture current page state
        captureCurrentPageState: function() {
            try {
                // Capture form data if any forms are present
                const forms = document.querySelectorAll('form:not(#bugReportForm)');
                const formData = {};
                
                forms.forEach((form, index) => {
                    const formName = form.id || form.name || `form_${index}`;
                    const inputs = form.querySelectorAll('input, select, textarea');
                    const formValues = {};
                    
                    inputs.forEach(input => {
                        if (input.type !== 'password' && input.name) {
                            formValues[input.name] = input.value;
                        }
                    });
                    
                    if (Object.keys(formValues).length > 0) {
                        formData[formName] = formValues;
                    }
                });

                this.addHiddenField('formData', JSON.stringify(formData));
            } catch (error) {
                console.warn('Could not capture form data:', error);
            }

            try {
                // Capture console errors if available
                const consoleErrors = this.getRecentConsoleErrors();
                this.addHiddenField('consoleErrors', JSON.stringify(consoleErrors));
            } catch (error) {
                console.warn('Could not capture console errors:', error);
            }
        },

        // Add hidden field to form
        addHiddenField: function(name, value) {
            const form = document.getElementById('bugReportForm');
            if (form) {
                let field = document.getElementById(name);
                if (!field) {
                    field = document.createElement('input');
                    field.type = 'hidden';
                    field.id = name;
                    field.name = name;
                    form.appendChild(field);
                }
                field.value = value;
            }
        },

        // Submit bug report
        submitBugReport: async function(event) {
            event.preventDefault();
            console.log('?? [BUG-REPORT] Form submission started');
            
            const operationId = window.SafeExecute ? window.SafeExecute.generateOperationId() : Math.random().toString(36).substr(2, 8);
            console.log(`?? [BUG-REPORT-${operationId}] Submitting bug report`);
            
            try {
                const form = document.getElementById('bugReportForm');
                if (!form) {
                    throw new Error('Bug report form not found');
                }
                
                console.log('?? [BUG-REPORT] Form found, creating FormData');
                const formData = new FormData(form);
                
                // Log form data for debugging
                console.log('?? [BUG-REPORT] Form data contents:');
                for (let [key, value] of formData.entries()) {
                    console.log(`  ${key}: ${value}`);
                }
                
                // Add timestamp
                formData.append('reportedDate', new Date().toISOString());
                
                console.log('?? [BUG-REPORT] Sending request to /Api/BugReport');
                const response = await fetch('/Api/BugReport', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                console.log(`?? [BUG-REPORT] Response status: ${response.status}`);
                
                if (response.ok) {
                    const result = await response.json();
                    console.log(`? [BUG-REPORT-${operationId}] Bug report submitted successfully: ${result.bugId}`);
                    
                    // Show success message
                    window.BugReportTool.showNotification('success', 'Bug Report Submitted', `Your bug report #${result.bugId} has been submitted successfully. Thank you for helping us improve OpCentrix!`);
                    
                    // Close modal and reset form
                    window.BugReportTool.closeBugReportModal();
                    form.reset();
                } else {
                    const errorText = await response.text();
                    console.error(`? [BUG-REPORT] Server error response: ${errorText}`);
                    throw new Error(`Server error: ${response.status} - ${errorText}`);
                }
            } catch (error) {
                console.error(`? [BUG-REPORT-${operationId}] Error submitting bug report:`, error);
                window.BugReportTool.showNotification('error', 'Submission Failed', `Unable to submit bug report: ${error.message}. Please try again or contact support.`);
            }
        },

        // Close bug report modal
        closeBugReportModal: function() {
            const modal = document.getElementById('bugReportModal');
            if (modal) {
                modal.classList.add('hidden');
            }
        },

        // Load and show bug statistics (Admin only)
        loadBugStats: async function() {
            const modal = document.getElementById('bugStatsModal');
            const content = document.getElementById('bugStatsContent');
            
            if (!modal || !content) return;
            
            modal.classList.remove('hidden');
            
            try {
                const pageArea = document.getElementById('pageArea').value;
                const response = await fetch(`/Api/BugReport/Stats?pageArea=${encodeURIComponent(pageArea)}`);
                
                if (response.ok) {
                    const stats = await response.json();
                    content.innerHTML = this.renderBugStats(stats);
                } else {
                    throw new Error('Failed to load stats');
                }
            } catch (error) {
                console.error('Error loading bug statistics:', error);
                content.innerHTML = `
                    <div class="text-center py-8">
                        <div class="text-red-500 mb-4">
                            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <p class="text-gray-600">Unable to load bug statistics</p>
                    </div>
                `;
            }
        },

        // Render bug statistics HTML
        renderBugStats: function(stats) {
            const getSeverityIcon = (severity) => {
                switch (severity) {
                    case 'Critical': return '??';
                    case 'High': return '??';
                    case 'Medium': return '??';
                    case 'Low': return '??';
                    default: return '?';
                }
            };

            const getStatusBadge = (status) => {
                const statusMap = {
                    'New': 'bg-yellow-100 text-yellow-800',
                    'InProgress': 'bg-blue-100 text-blue-800',
                    'Resolved': 'bg-green-100 text-green-800',
                    'Closed': 'bg-gray-100 text-gray-800'
                };
                return statusMap[status] || 'bg-gray-100 text-gray-800';
            };

            const formatDate = (dateString) => {
                const date = new Date(dateString);
                const now = new Date();
                const diffMs = now - date;
                const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
                
                if (diffDays === 0) return 'Today';
                if (diffDays === 1) return 'Yesterday';
                if (diffDays < 7) return `${diffDays} days ago`;
                return date.toLocaleDateString();
            };

            return `
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                    <div class="bg-blue-50 p-4 rounded-lg text-center">
                        <div class="text-2xl font-bold text-blue-600">${stats.totalBugs || 0}</div>
                        <div class="text-sm text-blue-800">Total Bugs</div>
                    </div>
                    <div class="bg-yellow-50 p-4 rounded-lg text-center">
                        <div class="text-2xl font-bold text-yellow-600">${stats.newBugs || 0}</div>
                        <div class="text-sm text-yellow-800">New</div>
                    </div>
                    <div class="bg-orange-50 p-4 rounded-lg text-center">
                        <div class="text-2xl font-bold text-orange-600">${stats.inProgressBugs || 0}</div>
                        <div class="text-sm text-orange-800">In Progress</div>
                    </div>
                    <div class="bg-green-50 p-4 rounded-lg text-center">
                        <div class="text-2xl font-bold text-green-600">${stats.resolvedBugs || 0}</div>
                        <div class="text-sm text-green-800">Resolved</div>
                    </div>
                </div>
                
                ${stats.recentBugs && stats.recentBugs.length > 0 ? `
                <div class="mb-6">
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="text-lg font-semibold">Bug Reports for This Page</h4>
