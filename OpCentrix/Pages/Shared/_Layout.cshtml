@* Enhanced Navigation for Option A: Stage-Aware Manufacturing Execution System *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpCentrix</title>
    
    @* Load OpCentrix styles FIRST to avoid conflicts *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stage-cohort-enhancements.css" asp-append-version="true" />
    
    @* Font Awesome for icons (including fas fa-calendar-plus) *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    @* Use Tailwind CDN only in development, production CSS in production *@
    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
    {
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            'opcentrix': {
                                'primary': '#3B82F6',
                                'secondary': '#6366F1',
                                'accent': '#10B981'
                            },
                            'stage': {
                                'sls': '#3B82F6',
                                'cnc': '#8B5CF6', 
                                'edm': '#EC4899',
                                'coating': '#F59E0B',
                                'qc': '#10B981',
                                'shipping': '#6366F1'
                            }
                        },
                        fontFamily: {
                            'sans': ['Inter', 'ui-sans-serif', 'system-ui']
                        }
                    }
                }
            }
        </script>
    }
    else
    {
        <link rel="stylesheet" href="~/css/tailwind-output.css" asp-append-version="true" />
    }
    
    @* Load Bootstrap LAST and only what we need *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    @* HTMX for dynamic content *@
    <script src="https://unpkg.com/htmx.org@1.9.10" integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC" crossorigin="anonymous"></script>
    
    @* Render Styles section *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-50">
    @{
        var user = Context.User;
        var isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        var userRole = user.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
        var userName = user.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value ?? user.Identity?.Name ?? "";
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString()?.TrimStart('/');
    }

    <!-- Session Timeout Warning -->
    <div id="session-timeout-warning" class="session-timeout-warning">
        <div class="max-w-7xl mx-auto px-4 flex items-center justify-center space-x-4">
            <div class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span id="timeout-message">Your session will expire in <span id="timeout-countdown">5</span> minutes</span>
            </div>
            <button onclick="extendSession()" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200">
                Extend Session
            </button>
        </div>
    </div>

    <!-- Enhanced Navigation for Option A Implementation -->
    <nav class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Logo and Primary Navigation -->
                <div class="flex items-center space-x-8">
                    <!-- Enhanced Logo with Option A Badge -->
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="flex items-center">
                            <div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl flex items-center justify-center mr-3 shadow-lg">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 11.172V5l-1-1z"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="flex items-center space-x-2">
                                    <span class="text-xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">OpCentrix</span>
                                    <span class="px-2 py-1 bg-gradient-to-r from-blue-500 to-purple-600 text-white text-xs font-bold rounded-full animate-pulse">
                                        OPTION A
                                    </span>
                                </div>
                                <p class="text-xs text-gray-500 leading-none">Stage-Aware Manufacturing Execution System</p>
                            </div>
                        </a>
                    </div>

                    @if (isAuthenticated)
                    {
                        <!-- Stage-Aware Navigation Links -->
                        <div class="hidden md:flex space-x-6">
                            <!-- Core Scheduling -->
                            <a href="/Scheduler" class="nav-link scheduler flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-blue-50">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                                Scheduler
                                <span class="ml-2 px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">Enhanced</span>
                            </a>

                            <!-- Manufacturing Workflow Stages -->
                            <div class="flex items-center space-x-1">
                                <!-- SLS Stage -->
                                <a href="/PrintTracking" class="nav-link stage-sls flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-blue-50">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 11.172V5l-1-1z"></path>
                                    </svg>
                                    SLS
                                </a>
                                
                                <!-- Stage Progression Arrow -->
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>

                                <!-- EDM Stage -->
                                <a href="/EDM" class="nav-link stage-edm flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-pink-50">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                    </svg>
                                    EDM
                                </a>

                                <!-- Stage Progression Arrow -->
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>

                                <!-- Coating Stage -->
                                <a href="/Coating" class="nav-link stage-coating flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-orange-50">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V9a2 2 0 012-2h2l2-4h6l2 4h2a2 2 0 012 2v8a4 4 0 01-4 4H7zM12 17a3 3 0 100-6 3 3 0 000 6z"></path>
                                    </svg>
                                    Coating
                                </a>

                                <!-- Stage Progression Arrow -->
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>

                                <!-- QC Stage -->
                                <a href="/QC" class="nav-link stage-qc flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-green-50">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    QC
                                </a>

                                <!-- Stage Progression Arrow -->
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>

                                <!-- Shipping Stage -->
                                <a href="/Shipping" class="nav-link stage-shipping flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-indigo-50">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                    </svg>
                                    Shipping
                                </a>
                            </div>

                            <!-- B&T Manufacturing Section (NEW - Amber Color) -->
                            @if (userRole == "Admin" || userRole == "Manager" || userRole == "BTSpecialist")
                            {
                                <div class="relative group">
                                    <button class="nav-link bt-manufacturing flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-amber-50 text-amber-600" onclick="toggleDropdown('bt-dropdown')">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                        </svg>
                                        B&T Manufacturing
                                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>
                                    <div id="bt-dropdown" class="hidden absolute top-full mt-1 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50">
                                        <a href="/BT/Dashboard" class="block px-4 py-2 text-sm text-amber-700 hover:bg-amber-50">B&T Dashboard</a>
                                        <a href="/BT/SerialNumbers" class="block px-4 py-2 text-sm text-amber-700 hover:bg-amber-50">Serial Numbers</a>
                                        <a href="/BT/Compliance" class="block px-4 py-2 text-sm text-amber-700 hover:bg-amber-50">Compliance</a>
                                    </div>
                                </div>
                            }

                            <!-- Advanced Workflows Section (NEW - Purple Color) -->
                            @if (userRole == "Admin" || userRole == "Manager" || userRole == "WorkflowSpecialist")
                            {
                                <div class="relative group">
                                    <button class="nav-link advanced-workflows flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-purple-50 text-purple-600" onclick="toggleDropdown('workflows-dropdown')">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                                        </svg>
                                        Advanced Workflows
                                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>
                                    <div id="workflows-dropdown" class="hidden absolute top-full mt-1 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50">
                                        <a href="/Workflows/MultiStage" class="block px-4 py-2 text-sm text-purple-700 hover:bg-purple-50">Multi-Stage Jobs</a>
                                        <a href="/Workflows/Resources" class="block px-4 py-2 text-sm text-purple-700 hover:bg-purple-50">Resource Scheduling</a>
                                    </div>
                                </div>
                            }

                            <!-- Admin Access -->
                            @if (userRole == "Admin" || userRole == "Manager")
                            {
                                <a href="/Admin" class="nav-link admin flex items-center px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-red-50">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                    </svg>
                                    Admin
                                </a>
                            }
                        </div>
                        
                        <!-- Mobile Menu Button -->
                        <div class="md:hidden">
                            <button id="mobile-menu-button" class="text-gray-600 hover:text-gray-900 focus:outline-none p-2 rounded-md">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                                </svg>
                            </button>
                        </div>
                    }
                </div>

                @if (isAuthenticated)
                {
                    <!-- User Menu with Stage Context -->
                    <div class="flex items-center space-x-4">
                        <!-- Stage Status Indicator (if on a stage page) -->
                        @if (currentPage?.Contains("Scheduler") == true)
                        {
                            <div class="hidden sm:flex items-center space-x-2 px-3 py-1 bg-blue-50 rounded-full">
                                <div class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></div>
                                <span class="text-xs font-medium text-blue-700">Scheduler Active</span>
                            </div>
                        }
                        @if (currentPage?.Contains("PrintTracking") == true)
                        {
                            <div class="hidden sm:flex items-center space-x-2 px-3 py-1 bg-blue-50 rounded-full">
                                <div class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></div>
                                <span class="text-xs font-medium text-blue-700">SLS Stage</span>
                            </div>
                        }
                        @if (currentPage?.Contains("EDM") == true)
                        {
                            <div class="hidden sm:flex items-center space-x-2 px-3 py-1 bg-pink-50 rounded-full">
                                <div class="w-2 h-2 bg-pink-500 rounded-full animate-pulse"></div>
                                <span class="text-xs font-medium text-pink-700">EDM Stage</span>
                            </div>
                        }
                        @if (currentPage?.Contains("Coating") == true)
                        {
                            <div class="hidden sm:flex items-center space-x-2 px-3 py-1 bg-orange-50 rounded-full">
                                <div class="w-2 h-2 bg-orange-500 rounded-full animate-pulse"></div>
                                <span class="text-xs font-medium text-orange-700">Coating Stage</span>
                            </div>
                        }

                        <!-- User Info -->
                        <div class="hidden sm:flex items-center space-x-3">
                            <div class="text-right">
                                <p class="text-sm font-medium text-gray-900">@userName</p>
                                <p class="text-xs text-gray-500">@userRole</p>
                            </div>
                            <div class="w-8 h-8 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full flex items-center justify-center">
                                <span class="text-white font-semibold text-xs">@(userName.FirstOrDefault())</span>
                            </div>
                        </div>
                        
                        <!-- Logout Button -->
                        <button onclick="performLogout()" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                            Logout
                        </button>
                    </div>
                }
                else
                {
                    <!-- Login Button for unauthenticated users -->
                    <div class="flex items-center">
                        <a href="/Account/Login" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                            Login
                        </a>
                    </div>
                }
            </div>
        </div>
        
        <!-- Enhanced Mobile Menu for Stage-Aware Navigation -->
        <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200 bg-gray-50">
            <div class="px-4 py-3 space-y-1">
                @if (isAuthenticated)
                {
                    <div class="pb-2 mb-2 border-b border-gray-200">
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Manufacturing Workflow</p>
                    </div>
                    
                    <a href="/Scheduler" class="flex items-center px-3 py-2 text-gray-600 hover:text-blue-600 font-medium rounded-md">
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        Production Scheduler
                        <span class="ml-auto px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">Enhanced</span>
                    </a>
                    
                    <div class="pl-6 space-y-1">
                        <a href="/PrintTracking" class="flex items-center px-3 py-2 text-blue-600 hover:text-blue-700 font-medium rounded-md">
                            <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
                            Stage 1: SLS Printing
                        </a>
                        <a href="/EDM" class="flex items-center px-3 py-2 text-pink-600 hover:text-pink-700 font-medium rounded-md">
                            <span class="w-2 h-2 bg-pink-500 rounded-full mr-3"></span>
                            Stage 2: EDM Operations
                        </a>
                        <a href="/Coating" class="flex items-center px-3 py-2 text-orange-600 hover:text-orange-700 font-medium rounded-md">
                            <span class="w-2 h-2 bg-orange-500 rounded-full mr-3"></span>
                            Stage 3: Coating
                        </a>
                        <a href="/QC" class="flex items-center px-3 py-2 text-green-600 hover:text-green-700 font-medium rounded-md">
                            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
                            Stage 4: Quality Control
                        </a>
                        <a href="/Shipping" class="flex items-center px-3 py-2 text-indigo-600 hover:text-indigo-700 font-medium rounded-md">
                            <span class="w-2 h-2 bg-indigo-500 rounded-full mr-3"></span>
                            Stage 5: Shipping
                        </a>
                    </div>
                    
                    <!-- B&T Manufacturing Mobile Section (NEW - Amber Color) -->
                    @if (userRole == "Admin" || userRole == "Manager" || userRole == "BTSpecialist")
                    {
                        <div class="border-t border-gray-200 pt-2 mt-2">
                            <p class="text-xs font-medium text-amber-600 uppercase tracking-wide mb-2">B&T Manufacturing</p>
                            <div class="pl-3 space-y-1">
                                <a href="/BT/Dashboard" class="flex items-center px-3 py-2 text-amber-600 hover:text-amber-700 font-medium rounded-md">
                                    <span class="w-2 h-2 bg-amber-500 rounded-full mr-3"></span>
                                    B&T Dashboard
                                </a>
                                <a href="/BT/SerialNumbers" class="flex items-center px-3 py-2 text-amber-600 hover:text-amber-700 font-medium rounded-md">
                                    <span class="w-2 h-2 bg-amber-500 rounded-full mr-3"></span>
                                    Serial Numbers
                                </a>
                                <a href="/BT/Compliance" class="flex items-center px-3 py-2 text-amber-600 hover:text-amber-700 font-medium rounded-md">
                                    <span class="w-2 h-2 bg-amber-500 rounded-full mr-3"></span>
                                    Compliance
                                </a>
                            </div>
                        </div>
                    }

                    <!-- Advanced Workflows Mobile Section (NEW - Purple Color) -->
                    @if (userRole == "Admin" || userRole == "Manager" || userRole == "WorkflowSpecialist")
                    {
                        <div class="border-t border-gray-200 pt-2 mt-2">
                            <p class="text-xs font-medium text-purple-600 uppercase tracking-wide mb-2">Advanced Workflows</p>
                            <div class="pl-3 space-y-1">
                                <a href="/Workflows/MultiStage" class="flex items-center px-3 py-2 text-purple-600 hover:text-purple-700 font-medium rounded-md">
                                    <span class="w-2 h-2 bg-purple-500 rounded-full mr-3"></span>
                                    Multi-Stage Jobs
