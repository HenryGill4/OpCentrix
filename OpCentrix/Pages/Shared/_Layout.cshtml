@* _layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpCentrix</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gray-100 font-sans">

    <!-- NAVIGATION BAR -->
    <header class="bg-white shadow sticky top-0 z-50">
        <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center justify-between">
            <h1 class="text-xl font-bold text-blue-800">OpCentrix</h1>
            <nav class="space-x-6 text-sm font-medium text-gray-700">
                <a href="/Scheduler" class="hover:text-blue-600">Scheduler</a>
                <a href="/SchedulerTemplate" class="hover:text-blue-600">Scheduler Template</a>
                <a href="/Machining" class="hover:text-blue-600">Machining</a>
                <a href="/EDM" class="hover:text-blue-600">EDM</a>
                <a href="/QC" class="hover:text-blue-600">QC</a>
                <a href="/Coating" class="hover:text-blue-600">Coating</a>
                <a href="/Shipping" class="hover:text-blue-600">Shipping</a>
                <a href="/Media" class="hover:text-blue-600">Media</a>
                <a href="/Analytics" class="hover:text-blue-600">Analytics</a>
                <a href="/Scheduler/JobLog" class="hover:text-blue-600">Job Log</a>
                <a href="/Admin" class="hover:text-blue-600 text-red-600 font-semibold">Admin</a>
            </nav>
        </div>
    </header>

    <!-- MAIN BODY CONTENT -->
    <main class="max-w-screen-xl mx-auto p-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="mt-10 text-center text-xs text-gray-400 pb-4">
        &copy; @DateTime.Now.Year - OpCentrix ERP by Henry Gill
    </footer>

    <!-- Core JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10/dist/htmx.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="~/js/scheduler-ui.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Modal Container for HTMX -->
    <div id="modal-content" class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50"></div>
</body>
</html>

