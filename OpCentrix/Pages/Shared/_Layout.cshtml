                                        <svg class="@(ViewContext.RouteData.Values["page"]?.ToString().Contains("Scheduler") == true && !ViewContext.RouteData.Values["page"]?.ToString().Contains("MasterSchedule") == true ? "text-blue-500" : "text-gray-400 group-hover:text-gray-500") flex-shrink-0 -ml-1 mr-3 h-6 w-6" 
