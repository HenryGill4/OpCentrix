@model dynamic

<!-- Active Build Warning Modal -->
<div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" id="active-build-warning">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-2/3 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <!-- Header -->
            <div class="flex items-center justify-between pb-4 border-b">
                <h3 class="text-lg font-semibold text-gray-900">Active Build Detected</h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Warning Content -->
            <div class="mt-6">
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        <div>
                            <h4 class="text-lg font-medium text-yellow-800">Printer @Model.PrinterName Already Has Active Build</h4>
                            <p class="mt-1 text-sm text-yellow-700">
                                There is already an active build job running on this printer. You must complete the current build before starting a new one.
                            </p>
                        </div>
                    </div>
                </div>

                @if (Model.ActiveBuild != null)
                {
                    <div class="mt-4 bg-gray-50 rounded-lg p-4">
                        <h5 class="font-medium text-gray-900 mb-2">Current Active Build:</h5>
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="font-medium text-gray-700">Build ID:</span>
                                <span class="text-gray-600">#@Model.ActiveBuild.BuildId</span>
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">Started:</span>
                                <span class="text-gray-600">@Model.ActiveBuild.ActualStartTime.ToString("MM/dd/yyyy HH:mm")</span>
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">Operator:</span>
                                <span class="text-gray-600">@(Model.ActiveBuild.User?.FullName ?? "Unknown")</span>
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">Status:</span>
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">@Model.ActiveBuild.Status</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Actions -->
            <div class="flex justify-end space-x-3 pt-6 border-t mt-6">
                <button type="button" 
                        onclick="closeModal()" 
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                    Cancel
                </button>
                @if (Model.ActiveBuild != null)
                {
                    <button type="button" 
                            onclick="openPostPrintModal(@Model.ActiveBuild.BuildId, '@Model.PrinterName')"
                            class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700">
                        Complete Active Build
                    </button>
                }
            </div>
        </div>
    </div>
</div>